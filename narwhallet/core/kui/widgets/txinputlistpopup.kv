<Txinputlistpopup>
    vin: vin
    auto_dismiss: False
    size_hint: 1, 1

    GridLayout:
        cols: 1

        Header:
            id: header
            value: 'Inputs'

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            bar_width: dp(15)
            scroll_type: ['bars','content']

            GridLayout:
                id: vin
                canvas:
                    Color:
                        rgba: 60/255, 61/255, 61/255, 1

                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: None
                height: self.minimum_height * dp(13) if root.width < dp(550) else self.minimum_height * dp(10)
                cols: 1
                spacing: dp(5)
                padding: dp(5)

        Nwboxlayout:
            size_hint_y: None
            height: dp(60)

            Nwbutton:
                _text: 'Done'
                on_release: root.dismiss()
