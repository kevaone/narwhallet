<LoadingSpinner@FloatLayout>:
    size_hint: None, 1
    width: dp(30)

    canvas.before:
        PushMatrix

        Rotate:
            angle: root.angle
            axis: 0, 0, 1
            origin: root.center
            on_angle: root.on_angle(root.angle)

    canvas.after:
        PopMatrix

    Nwimage:
        source: 'narwhallet/core/kui/assets/return.png'
