<Nwpasswordpopup>
    kpas: kpas
    btn_next: btn_next
    auto_dismiss: False
    size_hint: 0.7, 0.7

    GridLayout:
        cols: 1

        Header:
            id: header
            value: 'Password'

        Nwboxlayout:
            orientation: 'vertical'

        Nwboxlayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(35)

            Nwboxlayout:
                orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                font_size: dp(20)
                padding: [10, 0, 0, 0]
                _text: 'Password:'
                size_hint_x: None
                width: dp(125)

            TextInput:
                id: kpas
                size_hint_x: None
                width: dp(250)
                password: True
                password_mask: '*'
                write_tab: False
                on_text: root.verify()

            Nwboxlayout:
                orientation: 'horizontal'

        Nwboxlayout:
            orientation: 'vertical'

        Nwboxlayout:
            size_hint_y: None
            height: dp(60)

            Nwbutton:
                _text: 'Cancel'
                # icon: 'narwhallet/core/kui/assets/.png'
                # icon_size: (dp(25), dp(25))
                # icon_padding: dp(20)
                on_release: root.dismiss()

            Nwbutton:
                id: btn_next
                _text: 'Next'
                # icon: 'narwhallet/core/kui/assets/.png'
                # icon_size: (dp(25), dp(25))
                # icon_padding: dp(20)
                disabled: True
                on_release: root.next = True
