<QR_Code>
    qrimage: qrimage

    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
    canvas.after:
        Color:
            rgba: .5, .5, .5, 1 if root.show_border else 0
        Line:
            width: 1.333
            points:
                self.x + 2, self.y + 2,\
                self.x + self.width - 2, self.y + 2,\
                self.x + self.width - 2, self.y + self.height - 2,\
                self.x + 2, self.y + self.height - 2,\
                self.x + 2, self.y + 2
    Image:
        id: qrimage
        pos_hint: {'center_x': .5, 'center_y': .5}
        # allow_stretch: True
        fit_mode: 'contain'
        size_hint: None, None
        size: root.width * .9, root.height * .9
