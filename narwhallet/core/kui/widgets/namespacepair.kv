<NamespacePair@BoxLayout>
    key: key
    value: value
    transaction: transaction
    refs: refs

    canvas:
        Color:
            rgba: 1, 1, 1, 1

        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 1

        BoxLayout:
            orientation: 'horizontal'

            Nwlabel:
                text: key
                text_size: self.size
                padding: [5, 0, 0, 0]
                font_size: 17

        BoxLayout:
            orientation: 'horizontal'

            Nwlabel:
                text: value
                text_size: self.size
                padding: [5, 5, 0, 5]
