<NamespaceInfo>
    sm: None
    key: ''
    data: ''
    orientation: 'vertical'
    size_hint: 1, None
    height: dp(0)
    background_color: (25/255, 27/255, 27/255, 1)

    canvas:
        Color:
            rgba: self.background_color

        Rectangle:
            pos: self.pos
            size: self.size

    Nwlabel:
        _text: root.key
        padding: [5, 5, 5, 5]
        size_hint: 1, None
        text_size: self.width, None
        height: self.texture_size[1]
        on_texture_size: root.sizer()

    BoxLayout:
