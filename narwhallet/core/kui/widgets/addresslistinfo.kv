<AddressListInfo>
    size_hint_y: None
    sm: None
    index: ''
    wallet_name: 'None'
    address: 'address'
    address_label: 'address_label'
    balance: 'balance'
    transactions: 'transactions'
    size_hint_y: None
    height: dp(75)

    canvas:
        Color:
            rgba: self.hover_color if self.mouse_hover else self.background_color

        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(5)

            Nwlabel:
                _text: root.address
                font_size: dp(16)
                padding: [5, 0, 0, 0]

        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(5)

            Nwlabel:
                _text: root.address_label
                font_size: dp(16)
                padding: [5, 0, 0, 0]

        BoxLayout:
            orientation: 'horizontal'

            Nwlabel:
                _text: 'Index:'
                halign: 'left'
                padding: [5, 0, 0, 0]
                text_size: self.size
                size_hint_x: None
                width: dp(50)

            Nwlabel:
                _text: root.index
                halign: 'left'
                padding: [5, 0, 0, 0]
                text_size: self.size
                size_hint_x: None
                width: dp(50)

            Nwlabel:
                _text: 'TX:'
                halign: 'left'
                padding: [5, 0, 0, 0]
                text_size: self.size
                size_hint_x: None
                width: dp(33)

            Nwlabel:
                _text: root.transactions
                halign: 'left'
                padding: [5, 0, 0, 0]
                text_size: self.size
                size_hint_x: None
                width: dp(50)

            Nwlabel:
                _text: 'Balance:'
                text_size: self.size
                halign: 'left'
                padding: [5, 0, 0, 0]
                size_hint_x: None
                width: dp(71)

            Nwlabel:
                _text: root.balance
                halign: 'left'
                padding: [5, 0, 0, 0]
                text_size: self.size
                size_hint_x: None
                width: dp(150)
