#:import _tr narwhallet.core.kui._translate

<AddressListInfo>
    sm: None
    wallet_name: 'None'
    address: 'address'
    address_label: 'address_label'
    balance: 'balance'
    transactions: 'transactions'
    background_color: (25/255, 27/255, 27/255, 1)

    canvas:
        Color:
            rgba: self.background_color

        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 1

        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(5)
            # height: 20

            Nwlabel:
                text: root.address
                height: dp(20)
                font_size: dp(16)
                padding: [5, 0, 0, 0]

        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(5)
            # height: 20

            Nwlabel:
                text: root.address_label
                height: dp(20)
                font_size: dp(16)
                padding: [5, 0, 0, 0]

        BoxLayout:
            orientation: 'horizontal'
            # height: 25

            # Image:
            #     source: 'narwhallet/core/kui/assets/star.png'
            #     size_hint: None, None
            #     pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            #     allow_stretch: True
            #     fit_mode: 'contain'
            #     height: 30
            #     width: 30

            # Image:
            #     source: 'narwhallet/core/kui/assets/star.png'
            #     size_hint: None, None
            #     pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            #     allow_stretch: True
            #     fit_mode: 'contain'
            #     height: 30
            #     width: 30

            Nwlabel:
                text: _tr.translate('TX:')
                halign: 'left'
                padding: [5, 0, 0, 0]
                text_size: self.size
                size_hint_x: None
                width: dp(65)

            Nwlabel:
                text: root.transactions
                halign: 'left'
                padding: [5, 0, 0, 0]
                text_size: self.size
                size_hint_x: None
                width: dp(50)

            Nwlabel:
                text: _tr.translate('Balance:')
                text_size: self.size
                halign: 'left'
                padding: [5, 0, 0, 0]
                size_hint_x: None
                width: dp(75)

            Nwlabel:
                text: root.balance
                halign: 'left'
                padding: [5, 0, 0, 0]
                text_size: self.size
                size_hint_x: None
                width: dp(150)
