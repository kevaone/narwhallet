<AddressListInfo>
    sm: None
    wallet_name: 'None'
    address: 'address'
    address_label: 'address_label'
    balance: 'balance'
    transactions: 'transactions'

    canvas:
        Color:
            rgba: (25/255, 27/255, 27/255, 1)

        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 1

        BoxLayout:
            orientation: 'horizontal'
            spacing: 5
            # height: 20

            Nwlabel:
                text: root.address
                height: 20
                font_size: 18
                padding_x: 5

        BoxLayout:
            orientation: 'horizontal'
            spacing: 5
            # height: 20

            Nwlabel:
                text: root.address_label
                height: 20
                font_size: 18
                padding_x: 5

        BoxLayout:
            orientation: 'horizontal'
            # height: 25

