                _text: root.change_value
                text_size: self.size
                size_hint_x: None
                width: dp(175)

        Nwboxlayout:
            size_hint_y: None
            height: dp(20)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                _text: 'Fee Rate:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(100)

            Nwlabel:
                halign: 'left'
                valign: 'center'
                _text: root.fee_rate
                text_size: self.size
                size_hint_x: None
                width: dp(175)

        Nwboxlayout:
            size_hint_y: None
            height: dp(20)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                _text: 'Fee:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(100)

            Nwlabel:
                halign: 'left'
                valign: 'center'
                _text: root.fee
                text_size: self.size
                size_hint_x: None
                width: dp(175)

        Nwboxlayout:
            size_hint_y: None
            height: dp(20)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                _text: 'TX Size:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(100)

            Nwlabel:
                halign: 'left'
                valign: 'center'
                _text: root.txsize
                text_size: self.size
                size_hint_x: None
                width: dp(175)

