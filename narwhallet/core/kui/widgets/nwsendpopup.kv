<Nwsendpopup>
    auto_dismiss: False
    size_hint: 0.7, 0.7

    GridLayout:
        cols: 1

        Header:
            id: header
            value: 'Confirm Send'

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        Nwboxlayout:
            orientation: 'vertical'

        Nwboxlayout:
            size_hint_y: None
            height: dp(20)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                _text: 'Input:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(100)

            Nwlabel:
                halign: 'left'
                valign: 'center'
                _text: root.in_value
                text_size: self.size
                size_hint_x: None
                width: dp(175)

        Nwboxlayout:
            size_hint_y: None
            height: dp(20)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                _text: 'Output:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(100)

            Nwlabel:
                halign: 'left'
                valign: 'center'
                _text: root.out_value
                text_size: self.size
                size_hint_x: None
                width: dp(175)

        Nwboxlayout:
            size_hint_y: None
            height: dp(20)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                _text: 'Change:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(100)

            Nwlabel:
                halign: 'left'
