<NamespaceInfoPopup>
    namespaceid: namespaceid
    namespace_name: namespace_name
    shortcode: shortcode
    owner: owner
    creator: creator
    header: header
    auto_dismiss: False
    size_hint: 0.7, 0.7

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                _text: ''
                size_hint_x: None
                width: dp(5)

            Nwimage:
                source: 'narwhallet/core/kui/assets/clipboard_white.png'
                height: dp(20)
                width: dp(20)
                on_touch_down: if self.collide_point(*args[1].pos):root.manager.copy_to_clipboard(root.namespaceid.text)

            Nwlabel:
                _text: 'Namespace Id:'
                valign: 'center'
                font_size: dp(16)
                text_size: self.size
                padding: [5, 0, 0, 0]
                size_hint_x: None
                width: dp(125)

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                _text: ''
                size_hint_x: None
                width: dp(5)

            Nwlabel:
                id: namespaceid
                valign: 'center'
                _text: ''
                font_size: dp(16)
                text_size: self.size
                padding: [10, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

