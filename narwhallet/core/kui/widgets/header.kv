<Header>
    logo: logo
    value: ''
    cols: 1
    size_hint_y: None
    height: 85

    Nwboxlayout:
        canvas:
            Color:
                rgba: 1/255, 1/255, 1/255, 1

            Rectangle:
                pos: self.pos
                size: self.size
        size_hint_y: None
        height: 50

        Nwlabel:
            text: ''
            size_hint_x: None
            width: 10

        Nwimage:
            id: logo
            source: 'narwhallet/core/kui/assets/narwhal.png'
            height: 50
            width: 45
            valign: 'center'

        Nwlabel:
            text: 'Narwhallet'
            halign: 'left'
            valign: 'center'
            font_size: 37
            text_size: self.size
            size_hint_y: None
            height: 50
            padding_x: 5

