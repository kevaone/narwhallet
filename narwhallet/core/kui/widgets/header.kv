<Header>
    logo: logo
    value: ''
    cols: 1
    size_hint_y: None
    height: dp(90)

    Nwboxlayout:
        canvas:
            Color:
                rgba: 17/255, 17/255, 15/255, 1

            Rectangle:
                pos: self.pos
                size: self.size
        size_hint_y: None
        height: dp(50)

        Nwlabel:
            _text: ''
            size_hint_x: None
            width: dp(10)

        Nwimage:
            id: logo
            source: 'narwhallet/core/kui/assets/narwhal.png'
            height: dp(50)
            width: dp(45)
            valign: 'center'

        Nwlabel:
            _text: 'Narwhallet'
            halign: 'left'
            valign: 'center'
            font_size: dp(37)
            text_size: self.size
            size_hint_y: None
            height: dp(50)
            padding: [5, 0, 0, 0]

    Nwboxlayout:
        canvas:
            Color:
                rgba: 27/255, 27/255, 25/255, 1

            Rectangle:
                pos: self.pos
                size: self.size
        size_hint_y: None
        height: dp(40)

        Nwlabel:
            halign: 'left'
            valign: 'center'
            font_size: dp(30)
            text_size: self.size
            _text: root.value
            padding: [10, 10, 0, 10]
