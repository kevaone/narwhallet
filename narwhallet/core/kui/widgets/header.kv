<Header>
    logo: logo
    value: ''
    cols: 1
    size_hint_y: None
    height: dp(85)

    Nwboxlayout:
        canvas:
            Color:
                # rgba: 1/255, 1/255, 1/255, 1
                rgba: 17/255, 17/255, 15/255, 1

            Rectangle:
                pos: self.pos
                size: self.size
        size_hint_y: None
        height: dp(50)

        Nwlabel:
            text: ''
            size_hint_x: None
            width: dp(10)

        Nwimage:
            id: logo
            source: 'narwhallet/core/kui/assets/narwhal.png'
            height: dp(50)
            width: dp(45)
            valign: 'center'

        Nwlabel:
            text: 'Narwhallet'
            halign: 'left'
            valign: 'center'
            font_size: dp(37)
            text_size: self.size
            size_hint_y: None
            height: dp(50)
            padding: [5, 0, 0, 0]

    # Nwboxlayout:
    #     canvas:
    #         Color:
    #             rgba: 1/255, 1/255, 1/255, 1

    #         Rectangle:
    #             pos: self.pos
    #             size: self.size
    #     size_hint_y: None
    #     height: 5

    Nwboxlayout:
        canvas:
            Color:
                rgba: 27/255, 27/255, 25/255, 1

            Rectangle:
                pos: self.pos
                size: self.size
        size_hint_y: None
        height: dp(35)
        # padding: [0, 10, 0, 10]

        Nwlabel:
            halign: 'left'
            valign: 'center'
            font_size: dp(25)
            text_size: self.size
            text: root.value
            padding: [10, 10, 0, 10]
