<AddressBookListInfo>
    sm: None
    wallet_name: None
    trash_button: trash_button
    address: 'address'
    address_label: 'address_label'
    address_name: 'address_name'
    coin: 'coin'
    sent: 'sent'
    received: 'received'
    size_hint_y: None
    height: dp(120)

    canvas:
        Color:
            rgba: self.hover_color if self.mouse_hover else self.background_color

        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(5)
            size_hint_y: None
            height: dp(25)

            Nwimage:
                id: trash_button
                source: 'narwhallet/core/kui/assets/trashcan.png'

            Nwlabel:
                _text: root.address
                height: dp(20)
                font_size: dp(18)
                padding: [5, 0, 0, 0]

        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(5)
            size_hint_y: None
            height: dp(30)

            Nwlabel:
                _text: root.address_name
                height: dp(20)
                font_size: dp(18)
                padding: [5, 0, 0, 0]

        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(5)
            size_hint_y: None
            height: dp(25)

            Nwlabel:
                _text: root.address_label
                height: dp(20)
                font_size: dp(18)
                padding: [5, 0, 0, 0]

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(40)

            # Image:
            #     source: 'narwhallet/core/kui/assets/star.png'
            #     size_hint: None, None
            #     pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            #     allow_stretch: True
            #     fit_mode: 'contain'
            #     height: 30
            #     width: 30

            # Image:
            #     source: 'narwhallet/core/kui/assets/star.png'
            #     size_hint: None, None
            #     pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            #     allow_stretch: True
            #     fit_mode: 'contain'
            #     height: 30
            #     width: 30

            Nwlabel:
                _text: ''
                size_hint_x: None
                width: dp(5)

            Nwimage:
                source: 'narwhallet/core/kui/assets/keva-logo.png'
                height: dp(35)
                width: dp(30)

            Nwlabel:
                _text: 'Coin:'
                halign: 'left'
                valign: 'center'
                padding: [5, 0, 0, 0]
                text_size: self.size
                size_hint_x: None
                width: dp(50)

            Nwlabel:
                # id: coin
                _text: root.coin
                halign: 'left'
                valign: 'center'
                text_size: self.size
                size_hint_x: None
                width: dp(100)

            Nwlabel:
                _text: 'Sent:'
                text_size: self.size
                halign: 'left'
                valign: 'center'
                size_hint_x: None
                width: dp(45)

            Nwlabel:
                # id: sent
                _text: root.sent
                halign: 'left'
                valign: 'center'
                text_size: self.size
                size_hint_x: None
                width: dp(100)

            Nwlabel:
                _text: 'Received:'
                text_size: self.size
                halign: 'left'
                valign: 'center'
                size_hint_x: None
                width: dp(75)

            Nwlabel:
                _text: root.received
                halign: 'left'
                valign: 'center'
                text_size: self.size
                size_hint_x: None
                width: dp(100)

