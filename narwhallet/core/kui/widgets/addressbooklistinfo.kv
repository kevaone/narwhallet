<AddressBookListInfo>
    sm: None
    wallet_name: None
    address: address
    address_label: address_label
    address_name: address_name
    coin: coin
    sent: sent
    received: received

    canvas:
        Color:
            rgba: (25/255, 27/255, 27/255, 1)

        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 1

        BoxLayout:
            orientation: 'horizontal'
            spacing: 5
            size_hint_y: None
            height: 25

            Nwlabel:
                id: address
                text: ''
                height: 20
                font_size: 18
                padding_x: 5

        BoxLayout:
            orientation: 'horizontal'
            spacing: 5
            size_hint_y: None
            height: 30

            Nwlabel:
                id: address_name
                text: ''
                height: 20
                font_size: 18
                padding_x: 5

        BoxLayout:
            orientation: 'horizontal'
            spacing: 5
            size_hint_y: None
            height: 25

            Nwlabel:
                id: address_label
                text: ''
                height: 20
                font_size: 18
                padding_x: 5

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 40

