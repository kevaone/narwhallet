                source: 'narwhallet/core/kui/assets/keva-logo.png'
                height: 35
                width: 30

            Nwlabel:
                text: 'Coin:'
                halign: 'left'
                valign: 'center'
                padding: [5, 0, 0, 0]
                text_size: self.size
                size_hint_x: None
                width: 50

            Nwlabel:
                # id: coin
                text: root.coin
                halign: 'left'
                valign: 'center'
                text_size: self.size
                size_hint_x: None
                width: 100

            Nwlabel:
                text: 'Sent:'
                text_size: self.size
                halign: 'left'
                valign: 'center'
                size_hint_x: None
                width: 45

            Nwlabel:
                # id: sent
                text: root.sent
                halign: 'left'
                valign: 'center'
                text_size: self.size
                size_hint_x: None
                width: 100

            Nwlabel:
                text: 'Received:'
                text_size: self.size
                halign: 'left'
                valign: 'center'
                size_hint_x: None
                width: 75

            Nwlabel:
                text: root.received
                halign: 'left'
                valign: 'center'
                text_size: self.size
                size_hint_x: None
                width: 100

