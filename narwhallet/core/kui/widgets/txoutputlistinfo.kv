<TXOutputListInfo>
    sm: None
    n: n
    value: value
    scriptpubkey_asm: scriptpubkey_asm

    canvas:
        Color:
            rgba: (25/255, 27/255, 27/255, 1)

        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 1

        BoxLayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'
            # spacing: 5

            Nwlabel:
                text: 'n:'
                text_size: self.size
                size_hint_x: None
                padding: [10, 0, 0, 0]
                width: 40

            Nwlabel:
                id: n
                text: ''
                text_size: self.size
                size_hint_x: None
                width: 40

            Nwlabel:
                text: 'Value:'
                text_size: self.size
                size_hint_x: None
                width: 50

            Nwlabel:
                id: value
                text: ''
                text_size: self.size

        BoxLayout:
            size_hint_y: None
            height: 60
            orientation: 'horizontal'

            Nwlabel:
                id: scriptpubkey_asm
                text: ''
                halign: 'left'
                valign: 'top'
                padding: [10, 0, 0, 0]
                text_size: self.size
