#:import _tr narwhallet.core.kui._translate

<NamespaceListInfo>
    sm: None
    favorite: favorite
    favorite_source: ''
    ns_name: ''
    address: ''
    shortcode: ''
    keys: ''

    canvas:
        Color:
            rgba: self.hover_color if self.mouse_hover else self.background_color

        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(10)

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(25)

            Nwlabel:
                text: ''
                size_hint_x: None
                width: dp(5)

            Nwimage:
                id: favorite
                source: root.favorite_source
                height: dp(35)
                width: dp(35)

            Nwlabel:
                text: root.shortcode
                # height: 25
                valign: 'center'
                font_size: dp(20)
                text_size: self.size
                size_hint_x: None
                width: dp(115)

            Nwlabel:
                text: root.ns_name
                height: dp(25)
                font_size: dp(20)
                text_size: self.size
                padding: [5, 0, 0, 0]

        BoxLayout:
            orientation: 'horizontal'

            Nwlabel:
                text: root.address
                height: dp(20)
                font_size: dp(15)
                text_size: self.size
                padding: [5, 0, 0, 0]

        BoxLayout:
            orientation: 'horizontal'

            Nwlabel:
                text: _tr.translate('Keys:')
                text_size: self.size
                halign: 'left'
                padding: [5, 0, 0, 0]
                width: dp(65)
                size_hint_x: None

            Nwlabel:
                text: root.keys
                halign: 'left'
                padding: [5, 0, 0, 0]
                text_size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(10)
