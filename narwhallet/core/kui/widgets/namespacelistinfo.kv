<NamespaceListInfo>
    sm: None
    address: 'address'
    shortcode: 'shortcode'
    keys: 'keys'

    canvas:
        Color:
            rgba: (25/255, 27/255, 27/255, 1)

        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 1

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 10

        BoxLayout:
            orientation: 'horizontal'

            Nwlabel:
                text: root.shortcode
                height: 25
                font_size: 20
                text_size: self.size
                padding_x: 5
                size_hint_x: None
                width: 115

            # Nwlabel:
            #     text: root.ns_name
            #     height: 25
            #     font_size: 20
            #     text_size: self.size
            #     padding_x: 5

        BoxLayout:
            orientation: 'horizontal'

            Nwlabel:
                text: root.address
                height: 20
                font_size: 15
                text_size: self.size
                padding_x: 5

        BoxLayout:
            orientation: 'horizontal'

            Nwlabel:
                text: 'Keys:'
                text_size: self.size
                halign: 'left'
                padding_x: 5
                width: 45
                size_hint_x: None

            Nwlabel:
                text: root.keys
                halign: 'left'
                padding_x: 5
                text_size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 10
