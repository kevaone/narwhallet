<Nwpopup>
    status: status
    header: header
    auto_dismiss: False
    size_hint: 0.7, 0.7

    GridLayout:
        cols: 1

        Header:
            id: header
            value: 'Send Status'

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            bar_width: dp(15)
            scroll_type: ['bars','content']

            Nwlabel:
                id: status
                valign: 'center'
                _text: ''
                size_hint: 1, None
                text_size: self.width, None
                height: self.texture_size[1]
                padding: [10, 0, 15, 0]

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        Nwboxlayout:
            size_hint_y: None
            height: dp(60)

            Nwbutton:
                _text: 'Ok'
                # icon: 'narwhallet/core/kui/assets/.png'
                # icon_size: (dp(25), dp(25))
                # icon_padding: dp(20)
                on_release: root.dismiss()
