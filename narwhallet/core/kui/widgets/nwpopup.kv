<Nwpopup>
    status: status
    auto_dismiss: False
    size_hint: 0.7, 0.7

    GridLayout:
        cols: 1

        Header:
            id: header
            value: 'Send Status'

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        Nwboxlayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.status.texture_size[1]

            Nwlabel:
                id: status
                halign: 'center'
                valign: 'center'
                font_size: dp(20)
                text_size: self.size
                _text: ''
                size_hint_y: None
                height: self.texture_size[1]

        Nwboxlayout:
            orientation: 'vertical'

        Nwboxlayout:
            size_hint_y: None
            height: dp(60)

            Nwbutton:
                _text: 'Ok'
                # icon: 'narwhallet/core/kui/assets/.png'
                # icon_size: (dp(25), dp(25))
                # icon_padding: dp(20)
                on_release: root.dismiss()
