<TransactionListInfo>
    sm: None
    block: 'block'
    transaction: 'transaction'
    txvalue: 'txvalue'
    status: 'status'

    size_hint_x: None
    width: 500

    canvas:
        Color:
            rgba: (25/255, 27/255, 27/255, 1)

        Rectangle:
            pos: self.pos
            size: (650, self.size[1])

    GridLayout:
        cols: 1
        size_hint_x: None
        width: 650

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 10
        BoxLayout:
            orientation: 'horizontal'

            Nwlabel:
                # id: transaction
                text: root.transaction
                text_size: self.size
                padding_x: 5
                font_size: 17
                size_hint_y: None
                height: 40

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 30

            Nwlabel:
                # id: block
                text: root.block
                text_size: self.size
                padding_x: 5
            Nwlabel:
                # id: status
                text: root.status
                padding_x: 5
                text_size: self.size
            Nwlabel:
                text: 'Value:'
                text_size: self.size
                halign: 'right'
                padding_x: 5
            Nwlabel:
                # id: txvalue
                text: root.txvalue
                halign: 'right'
                padding_x: 5
                text_size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 10
