<TransactionListInfo>
    sm: None
    block: 'block'
    transaction: 'transaction'
    txvalue: 'txvalue'
    status: 'status'
    size_hint_y: None
    height: dp(85) if root.width <= dp(650) else dp(60)

    canvas:
        Color:
            rgba: self.hover_color if self.mouse_hover else self.background_color

        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'

            Nwlabel:
                _text: root.transaction
                text_size: self.size
                padding: [5, 0, 0, 0]
                font_size: dp(17)
                size_hint_y: None
                height: dp(60) if root.width <= dp(650) else dp(30)

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(30)

            Nwlabel:
                _text: 'Block:'
                text_size: self.size
                padding: [5, 0, 0, 0]
                size_hint_x: None
                width: dp(60)

            Nwlabel:
                _text: root.block
                text_size: self.size
                size_hint_x: None
                width: dp(75)

            Nwlabel:
                _text: root.status
                text_size: self.size
                size_hint_x: None
                width: dp(75)

            Nwlabel:
                _text: 'Value:'
                text_size: self.size
                size_hint_x: None
                width: dp(60)

            Nwlabel:
                _text: root.txvalue
                text_size: self.size
                size_hint_x: None
                width: dp(125)
