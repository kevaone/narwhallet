<TransactionListInfo>
    sm: None
    block: 'block'
    transaction: 'transaction'
    txvalue: 'txvalue'
    status: 'status'
    size_hint_y: None
    height: dp(85) if root.width <= dp(650) else dp(60)

    canvas:
        Color:
            rgba: self.hover_color if self.mouse_hover else self.background_color

        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        # BoxLayout:
        #     orientation: 'horizontal'
        #     size_hint_y: None
        #     height: 10
        BoxLayout:
            orientation: 'horizontal'

            Nwlabel:
                # id: transaction
                _text: root.transaction
                text_size: self.size
                padding: [5, 0, 0, 0]
                font_size: dp(17)
                size_hint_y: None
                height: dp(60) if root.width <= dp(650) else dp(30)

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(30)

            Nwlabel:
                # id: block
                _text: root.block
                text_size: self.size
                padding: [5, 0, 0, 0]
            Nwlabel:
                # id: status
                _text: root.status
                padding: [5, 0, 0, 0]
                text_size: self.size
            Nwlabel:
                _text: 'Value:'
                text_size: self.size
                halign: 'right'
                padding: [5, 0, 0, 0]
            Nwlabel:
                # id: txvalue
                _text: root.txvalue
                halign: 'right'
                padding: [5, 0, 0, 0]
                text_size: self.size

        # BoxLayout:
        #     orientation: 'horizontal'
        #     size_hint_y: None
        #     height: 10
