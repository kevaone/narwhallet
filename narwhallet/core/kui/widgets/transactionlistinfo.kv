<TransactionListInfo>
    sm: None
    block: 'block'
    transaction: 'transaction'
    txvalue: 'txvalue'
    status: 'status'

    canvas:
        Color:
            rgba: (25/255, 27/255, 27/255, 1)

        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 1

        # BoxLayout:
        #     orientation: 'horizontal'
        #     size_hint_y: None
        #     height: 10
        BoxLayout:
            orientation: 'horizontal'

            Nwlabel:
                # id: transaction
                text: root.transaction
                text_size: self.size
                padding: [5, 0, 0, 0]
                font_size: 17
                size_hint_y: None
                height: 60 if root.width <= 650 else 30

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 30

            Nwlabel:
                # id: block
                text: root.block
                text_size: self.size
                padding: [5, 0, 0, 0]
            Nwlabel:
                # id: status
                text: root.status
                padding: [5, 0, 0, 0]
                text_size: self.size
            Nwlabel:
                text: 'Value:'
                text_size: self.size
                halign: 'right'
                padding: [5, 0, 0, 0]
            Nwlabel:
                # id: txvalue
                text: root.txvalue
                halign: 'right'
                padding: [5, 0, 0, 0]
                text_size: self.size

        # BoxLayout:
        #     orientation: 'horizontal'
        #     size_hint_y: None
        #     height: 10
