<TransactionListInfo>
    sm: None
    block: 'block'
    time: ''
    transaction: 'transaction'
    txvalue: 'txvalue'
    status: 'status'
    size_hint_y: None
    height: dp(125) if root.width <= dp(555) else dp(105)

    canvas:
        Color:
            rgba: self.hover_color if self.mouse_hover else self.background_color

        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(25)

            Nwlabel:
                _text: 'Date:'
                text_size: self.size
                halign: 'left'
                valign: 'top'
                padding: [10, 0, 0, 0]
                width: dp(55)
                size_hint_x: None

            Nwlabel:
                _text: root.time
                halign: 'left'
                valign: 'top'
                text_size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(20)

            Nwlabel:
                _text: 'Block:'
                valign: 'top'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(60)

            Nwlabel:
                _text: root.block
                valign: 'top'
                text_size: self.size
                size_hint_x: None
                width: dp(100)

            Nwlabel:
                _text: root.status
                valign: 'top'
                text_size: self.size
                size_hint_x: None
                width: dp(75)

            Nwlabel:
                _text: 'Value:'
                valign: 'top'
                text_size: self.size
                size_hint_x: None
                width: dp(60)

            Nwlabel:
                _text: root.txvalue
                valign: 'top'
                text_size: self.size
                size_hint_x: None
                width: dp(125)

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(20)

            Nwlabel:
                _text: 'txid:'
                valign: 'top'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(60)

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: self.minimum_height

            Nwlabel:
                _text: root.transaction
                valign: 'top'
                padding: [15, 5, 15, 15]
                size_hint: 1, None
                text_size: self.width, None
                height: self.texture_size[1]

        
