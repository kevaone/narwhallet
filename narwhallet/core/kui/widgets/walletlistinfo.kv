<WalletListInfo>
    size_hint_y: None
    height: dp(75)
    sm: None
    # wallet_name: wallet_name
    ticker: ticker
    # balance: balance
    # last_updated: last_updated
    # background_color: [25/255, 27/255, 27/255, 1]
    canvas:
        Color:
            rgba: self.hover_color if self.mouse_hover else self.background_color

        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(35)

            Nwimage:
                id: ticker
                source: 'narwhallet/core/kui/assets/keva-logo.png'
                height: dp(30)
                width: dp(45)

            Nwlabel:
                # id: wallet_name
                _text: root.wallet_name
                height: dp(35)
                font_size: dp(25)

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(20)

            Nwlabel:
                _text: 'Balance:'
                text_size: self.size
                halign: 'right'
                padding: [5, 0, 0, 0]

            Nwlabel:
                # id: balance
                _text: root.balance
                halign: 'right'
                padding: [5, 0, 20, 0]
                text_size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(20)

            Nwlabel:
                _text: 'Last Updated:'
                halign: 'right'
                padding: [5, 0, 0, 0]
                text_size: self.size

            Nwlabel:
                # id: last_updated
                _text: root.last_updated
                halign: 'right'
                padding: [5, 0, 20, 0]
                text_size: self.size
