<WalletListInfo>
    size_hint_y: None
    height: dp(80)
    sm: None
    ticker: ticker
    lock_state: lock_state
    canvas:
        Color:
            rgba: self.hover_color if self.mouse_hover else self.background_color

        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(35)

            Nwimage:
                id: ticker
                source: 'narwhallet/core/kui/assets/keva-logo.png'
                height: dp(30)
                width: dp(45)

            Nwimage:
                id: lock_state
                source: root.lock_icon
                height: dp(25)
                width: dp(25)

            Nwlabel:
                _text: root.wallet_name
                height: dp(35)
                padding: [10, 0, 0, 0]
                font_size: dp(25)

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(20)

            Nwlabel:
                _text: 'Balance:'
                text_size: self.size
                halign: 'right'
                valign: 'top'
                padding: [5, 0, 0, 0]

            Nwlabel:
                _text: root.balance
                halign: 'right'
                valign: 'top'
                padding: [5, 0, 20, 0]
                text_size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(25)

            Nwlabel:
                _text: 'Last Updated:'
                halign: 'right'
                valign: 'top'
                padding: [5, 0, 0, 0]
                text_size: self.size

            Nwlabel:
                _text: root.last_updated
                halign: 'right'
                valign: 'top'
                padding: [5, 0, 20, 0]
                text_size: self.size
