<WalletListInfo>
    sm: None
    wallet_name: wallet_name
    ticker: ticker
    balance: balance
    last_updated: last_updated
    canvas:
        Color:
            rgba: (87/255, 95/255, 97/255, 1)

        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 1

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 35

            Nwimage:
                id: ticker
                source: 'narwhallet/core/kui/assets/keva-logo.png'
                height: 30
                width: 45

            Nwlabel:
                id: wallet_name
                text: ''
                height: 35
                font_size: 25

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 20

            Nwlabel:
                text: 'Balance:'
                text_size: self.size
                halign: 'right'
                padding: [5, 0, 0, 0]

            Nwlabel:
                id: balance
                text: ''
                halign: 'right'
                padding: [5, 0, 0, 0]
                text_size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 20

            Nwlabel:
                text: 'Last Updated:'
                halign: 'right'
                padding: [5, 0, 0, 0]
                text_size: self.size

            Nwlabel:
                id: last_updated
                text: ''
                halign: 'right'
                padding: [5, 0, 0, 0]
                text_size: self.size
