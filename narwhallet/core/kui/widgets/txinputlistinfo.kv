<TXInputListInfo>
    orientation: 'vertical'
    sm: None
    txid: txid
    vout: vout
    height: dp(85) if root.width < dp(550) else dp(65)

    canvas:
        Color:
            rgba: (25/255, 27/255, 27/255, 1)

        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: dp(20)

        Nwlabel:
            _text: 'txid:'
            text_size: self.size
            padding: [5, 0, 0, 0]
            size_hint_x: None
            width: dp(50)

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: dp(45) if root.width < dp(550) else dp(25)

        Nwlabel:
            id: txid
            _text: 'txid'
            valign: 'center'
            text_size: self.size
            padding: [5, 0, 0, 0]
            size_hint_y: None
            height: dp(40) if root.width < dp(550) else dp(25)

    BoxLayout:
        size_hint_y: None
        height: dp(20)
        orientation: 'horizontal'

        Nwlabel:
            _text: 'vout:'
            text_size: self.size
            halign: 'left'
            padding: [5, 0, 0, 0]
            size_hint_x: None
            width: dp(50)

        Nwlabel:
            id: vout
            _text: 'vout'
            text_size: self.size

    BoxLayout:
        size_hint_y: None
        height: dp(5)
        orientation: 'horizontal'
