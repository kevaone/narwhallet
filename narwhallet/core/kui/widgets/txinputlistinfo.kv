<TXInputListInfo>
    sm: None
    txid: txid
    vout: vout

    canvas:
        Color:
            rgba: (25/255, 27/255, 27/255, 1)

        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 1

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(40) if root.width <= dp(650) else dp(20)

            Nwlabel:
                id: txid
                _text: 'txid'
                text_size: self.size
                padding: [5, 0, 0, 0]

        BoxLayout:
            size_hint_y: None
            height: dp(20)
            orientation: 'horizontal'

            Nwlabel:
                _text: 'vout:'
                text_size: self.size
                halign: 'left'
                padding: [5, 0, 0, 0]
            Nwlabel:
                id: vout
                _text: 'vout'
                halign: 'right'
                padding: [5, 0, 0, 0]
                text_size: self.size
