<NamespaceAltScreen>
    namespaceid: ''
    namespace_name: namespace_name
    shortcode: shortcode
    namespace_key_list: namespace_key_list
    owner: owner
    creator: creator
    # transfer_button: transfer_button
    header: header

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        BoxLayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                text: ''
                size_hint_x: None
                width: 5

            Nwimage:
                source: 'narwhallet/core/kui/assets/clipboard_white.png'
                height: 25
                width: 25
                on_touch_down: if self.collide_point(*args[1].pos): root.manager.copy_to_clipboard(root.namespaceid.text)

            Nwlabel:
                # id: namespaceid
                valign: 'center'
                text: root.namespaceid
                font_size: 18
                text_size: self.size
                padding: [10, 0, 0, 0]

        BoxLayout:
            size_hint_y: None
            height: 30
            orientation: 'horizontal'

            Nwlabel:
                text: ''
                size_hint_x: None
                width: 5

            Nwimage:
                source: 'narwhallet/core/kui/assets/clipboard_white.png'
                height: 25
                width: 25
                on_touch_down: if self.collide_point(*args[1].pos): root.manager.copy_to_clipboard(root.shortcode.text)

            Nwlabel:
                id: shortcode
                valign: 'center'
                font_size: 20
                text_size: self.size
                text: 'Shortcode'
                size_hint_x: None
                padding: [10, 0, 0, 0]
                width: 150

            Nwimage:
                id: bid_button
                source: 'narwhallet/core/kui/assets/plus_white.png'
                on_touch_down: if self.collide_point(*args[1].pos): root.bid_namespace()

        BoxLayout:
            size_hint_y: None
            height: 30
            orientation: 'horizontal'

            Nwlabel:
                id: namespace_name
                font_size: 25
                text_size: self.size
                text: 'Name'
                padding: [10, 0, 0, 0]

        BoxLayout:
            size_hint_y: None
            height: 25
            orientation: 'horizontal'

            Nwlabel:
                text: ''
                size_hint_x: None
                width: 5

            Nwimage:
                source: 'narwhallet/core/kui/assets/clipboard_white.png'
                height: 20
                width: 20
                on_touch_down: if self.collide_point(*args[1].pos): root.manager.copy_to_clipboard(root.creator.text)

            Nwlabel:
                text: 'Creator:'
                valign: 'center'
                padding: [5, 0, 0, 0]
                size_hint_x: None
                width: 75

            Nwlabel:
                id: creator
                valign: 'center'
                text: ''

        BoxLayout:
            size_hint_y: None
            height: 25
            orientation: 'horizontal'

            Nwlabel:
                text: ''
                size_hint_x: None
                width: 5

            Nwimage:
                source: 'narwhallet/core/kui/assets/clipboard_white.png'
                height: 20
                width: 20
                on_touch_down: if self.collide_point(*args[1].pos): root.manager.copy_to_clipboard(root.owner.text)

            Nwlabel:
                text: 'Owner:'
                valign: 'center'
                padding: [5, 0, 0, 0]
                size_hint_x: None
                width: 75

            Nwlabel:
                id: owner
                valign: 'center'
                text: 'Owner:'

        BoxLayout:
            size_hint_y: None
            height: 10
            orientation: 'horizontal'

        # BoxLayout:
        #     canvas:
        #         Color:
        #             rgba: 60/255, 61/255, 61/255, 1

        #         Rectangle:
        #             pos: self.pos
        #             size: self.size
        #     orientation: 'horizontal'
        #     size_hint_y: None
        #     height: 35

        #     Nwbutton:
        #         text: 'Create Key'
        #         on_press: root.manager.createnamespacekey_screen.populate()

        RecycleView:
            id: namespace_key_list
            viewclass: 'NamespaceInfo'
            do_scroll_y: True
            bar_width: 6
            size_hint: 1, 1
            scroll_type: ['bars','content']

            RecycleBoxLayout:
                orientation: 'vertical'
                canvas:
                    Color:
                        rgba: 60/255, 61/255, 61/255, 1

                    Rectangle:
                        pos: self.pos
                        size: self.size

                size_hint: 1, None
                height: self.minimum_height
                default_size: 0, 0
                default_size_hint: 1, None
                spacing: 5
                padding: 5

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: 35

            # Nwbutton:
            #     text: 'Wallet'
            #     on_press: root.manager.current = 'wallet_screen'

            Nwbutton:
                text: 'Market'
                on_press: root.manager.current = 'market_screen'
