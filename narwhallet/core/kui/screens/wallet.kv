#:import _tr narwhallet.core.kui._translate

<WalletScreen>
    header: header
    wallet_balance: wallet_balance
    wallet_unconfirmed_balance: wallet_unconfirmed_balance
    wallet_locked_balance: wallet_locked_balance
    wallet_sent: wallet_sent
    wallet_received: wallet_received
    # wallet_recent_transactions: wallet_recent_transactions
    # wallet_transaction_count: wallet_transaction_count
    # wallet_unspenttransaction_count: wallet_unspenttransaction_count
    btn_addresses: btn_addresses
    btn_namespaces: btn_namespaces
    btn_transactions: btn_transactions
    last_updated: last_updated
    btn_update_wallet: btn_update_wallet
    btn_send: btn_send
    btn_receive: btn_receive

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        Nwboxlayout:
            size_hint_y: None
            height: dp(25)

            Nwlabel:
                halign: 'left'
                font_size: dp(20)
                text_size: self.size
                text: _tr.translate('Last Updated:')
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(175)

            Nwlabel:
                id: last_updated
                halign: 'left'
                font_size: dp(20)
                text_size: self.size
                text: ''
                size_hint_x: None
                width: dp(190)

            LoadingSpinner:
                id: btn_update_wallet

        Nwboxlayout:
            size_hint_y: None
            height: dp(25)

            Nwlabel:
                halign: 'left'
                font_size: dp(20)
                text_size: self.size
                text: _tr.translate('Balance:')
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(175)

            Nwlabel:
                id: wallet_balance
                halign: 'left'
                font_size: dp(20)
                text_size: self.size
                text: ''

        Nwboxlayout:
            size_hint_y: None
            height: dp(25)

            Nwlabel:
                halign: 'left'
                font_size: dp(20)
                text_size: self.size
                text: _tr.translate('Unconfirmed:')
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(175)

            Nwlabel:
                id: wallet_unconfirmed_balance
                halign: 'left'
                font_size: dp(20)
                text_size: self.size
                text: ''

        Nwboxlayout:
            size_hint_y: None
            height: dp(25)

            Nwlabel:
                halign: 'left'
                font_size: dp(20)
                text_size: self.size
                text: _tr.translate('Locked:')
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(175)

            Nwlabel:
                id: wallet_locked_balance
                halign: 'left'
                font_size: dp(20)
                text_size: self.size
                text: ''

        Nwboxlayout:
            size_hint_y: None
            height: dp(25)

            Nwlabel:
                halign: 'left'
                font_size: dp(20)
                text_size: self.size
                text: _tr.translate('Total Sent:')
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(175)

            Nwlabel:
                id: wallet_sent
                halign: 'left'
                font_size: dp(20)
                text_size: self.size
                text: ''

        Nwboxlayout:
            size_hint_y: None
            height: dp(25)

            Nwlabel:
                halign: 'left'
                font_size: dp(20)
                text_size: self.size
                text: _tr.translate('Total Recevied:')
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(175)

            Nwlabel:
                id: wallet_received
                halign: 'left'
                font_size: dp(20)
                text_size: self.size
                text: ''

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        Nwboxlayout:
            size_hint_y: None
            height: dp(40)

            Nwbutton:
                font_size: dp(20)
                text: _tr.translate('Information')
                on_press: root.manager.walletinfo_screen.populate(header.value)

        Nwboxlayout:
            size_hint_y: None
            height: dp(40)

            Nwbutton:
                id: btn_addresses
                font_size: dp(20)
                text: _tr.translate('Addresses')
                on_press: root.manager.addresses_screen.populate(header.value)

        Nwboxlayout:
            size_hint_y: None
            height: dp(40)

            Nwbutton:
                id: btn_namespaces
                font_size: dp(20)
                text: _tr.translate('Namespaces')
                on_press: root.manager.namespaces_screen.populate()

        Nwboxlayout:
            size_hint_y: None
            height: dp(40)

            Nwbutton:
                id: btn_transactions
                font_size: dp(20)
                text: _tr.translate('History')
                on_press: root.manager.transactions_screen.populate(header.value)

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        Nwboxlayout:
            size_hint_y: None
            height: dp(50)

            Nwbutton:
                id: btn_send
                font_size: dp(25)
                text: _tr.translate('Send')
                on_press: root.manager.send_screen.populate(header.value)

        Nwboxlayout:
            size_hint_y: None
            height: dp(50)

            Nwbutton:
                id: btn_receive
                font_size: dp(25)
                text: _tr.translate('Receive')
                on_press: root.manager.receive_screen.populate(header.value) #= 'receive_screen'

        Nwboxlayout:
            # size_hint_y: None
            # height: 10

        Nwboxlayout:
            size_hint_y: None
            height: dp(60)

            Nwbutton:
                text: _tr.translate('Home')
                icon: 'narwhallet/core/kui/assets/home_white.png'
                icon_size: (dp(25), dp(25))
                icon_padding: dp(20)
                on_press: root.manager.current = 'home_screen'
