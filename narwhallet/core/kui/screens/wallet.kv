<WalletScreen>
    header: header
    wallet_balance: wallet_balance
    wallet_unconfirmed_balance: wallet_unconfirmed_balance
    wallet_locked_balance: wallet_locked_balance
    wallet_sent: wallet_sent
    wallet_received: wallet_received
    # wallet_recent_transactions: wallet_recent_transactions
    # wallet_transaction_count: wallet_transaction_count
    # wallet_unspenttransaction_count: wallet_unspenttransaction_count
    btn_addresses: btn_addresses
    btn_namespaces: btn_namespaces
    btn_transactions: btn_transactions
    last_updated: last_updated
    btn_update_wallet: btn_update_wallet

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        Nwboxlayout:
            size_hint_y: None
            height: 10

        Nwboxlayout:
            size_hint_y: None
            height: 25

            Nwlabel:
                halign: 'left'
                font_size: 20
                text_size: self.size
                text: 'Last Updated:'
                padding: [10, 0, 0, 0]

            Nwlabel:
                id: last_updated
                halign: 'right'
                font_size: 20
                text_size: self.size
                text: ''
                padding: [10, 0, 0, 0]

            LoadingSpinner:
                id: btn_update_wallet

        Nwboxlayout:
            size_hint_y: None
            height: 25

            Nwlabel:
                halign: 'left'
                font_size: 20
                text_size: self.size
                text: 'Balance:'
                padding: [10, 0, 0, 0]

            Nwlabel:
                id: wallet_balance
                halign: 'right'
                font_size: 20
                text_size: self.size
                text: ''
                padding: [10, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: 25

            Nwlabel:
                halign: 'left'
                font_size: 20
                text_size: self.size
                text: 'Unconfirmed:'
                padding: [10, 0, 0, 0]

            Nwlabel:
                id: wallet_unconfirmed_balance
                halign: 'right'
                font_size: 20
                text_size: self.size
                text: ''
                padding: [10, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: 25

            Nwlabel:
                halign: 'left'
                font_size: 20
                text_size: self.size
                text: 'Locked:'
                padding: [10, 0, 0, 0]

            Nwlabel:
                id: wallet_locked_balance
                halign: 'right'
                font_size: 20
                text_size: self.size
                text: ''
                padding: [10, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: 25

            Nwlabel:
                halign: 'left'
                font_size: 20
                text_size: self.size
                text: 'Total Sent:'
                padding: [10, 0, 0, 0]

            Nwlabel:
                id: wallet_sent
                halign: 'right'
                font_size: 20
                text_size: self.size
                text: ''
                padding: [10, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: 25

            Nwlabel:
                halign: 'left'
                font_size: 20
                text_size: self.size
                text: 'Total Recevied:'
                padding: [10, 0, 0, 0]

            Nwlabel:
                id: wallet_received
                halign: 'right'
                font_size: 20
                text_size: self.size
                text: ''
                padding: [10, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: 10

        Nwboxlayout:
            size_hint_y: None
            height: 40

            Nwbutton:
                font_size: 20
                text: 'Information'
                on_press: root.manager.walletinfo_screen.populate(header.value)

        Nwboxlayout:
            size_hint_y: None
            height: 40

            Nwbutton:
                id: btn_addresses
                font_size: 20
                text: 'Addresses'
                on_press: root.manager.addresses_screen.populate(header.value)

        Nwboxlayout:
            size_hint_y: None
            height: 40

            Nwbutton:
                id: btn_namespaces
                font_size: 20
                text: 'Namespaces'
                on_press: root.manager.namespaces_screen.populate()

        Nwboxlayout:
            size_hint_y: None
            height: 40

            Nwbutton:
                id: btn_transactions
                font_size: 20
                text: 'Transactions'
                on_press: root.manager.transactions_screen.populate(header.value)

        Nwboxlayout:
            size_hint_y: None
            height: 10

        Nwboxlayout:
            size_hint_y: None
            height: 45

            Nwbutton:
                id: btn_send
                font_size: 25
                text: 'Send'
                on_press: root.manager.send_screen.populate(header.value)

        Nwboxlayout:
            size_hint_y: None
            height: 45

            Nwbutton:
                id: btn_receive
                font_size: 25
                text: 'Receive'
                on_press: root.manager.receive_screen.populate(header.value) #= 'receive_screen'

        Nwboxlayout:
            # size_hint_y: None
            # height: 10

        Nwboxlayout:
            size_hint_y: None
            height: 35

            Nwbutton:
                text: 'Home'
                icon: 'narwhallet/core/kui/assets/home_white.png'
                icon_size: (25, 25)
                icon_padding: 20
                on_press: root.manager.current = 'home_screen'
