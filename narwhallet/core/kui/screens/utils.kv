<UtilsScreen>
    wallet_name: wallet_name
    address: address
    pubk: pubk
    message: message
    signature: signature
    valid_sig: valid_sig
    header: header

    GridLayout:
        size_hint: None, None
        size: root.width, root.height
        cols: 1

        Header:
            id: header
            value: 'Utils'

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            bar_width: dp(15)
            scroll_type: ['bars','content']

            GridLayout:
                canvas:
                    Color:
                        rgba: 36/255, 36/255, 36/255, 1

                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: None
                rows: 17
                height: dp(45) * self.rows + (dp(10)*self.rows) if root.width <= dp(650) else dp(45) * self.rows + (dp(10)*self.rows)
                cols: 1
                spacing: dp(5)
                padding: dp(5)

                Nwboxlayout:
                    size_hint_y: None
                    height: dp(20)
                    orientation: 'horizontal'

                    Nwlabel:
                        halign: 'left'
                        valign: 'center'
                        _text: 'Wallet:'
                        text_size: self.size
                        size_hint_x: None
                        width: dp(75)
                        padding: [10, 0, 0, 0]

                Nwboxlayout:
                    size_hint_y: None
                    height: dp(35)
                    orientation: 'horizontal'

                    Nwlabel:
                        halign: 'left'
                        _text: ''
                        text_size: self.size
                        size_hint_x: None
                        width: dp(10)

                    Spinner:
                        id: wallet_name
                        halign: 'center'
                        valign: 'center'
                        _text: ''
                        text_size: self.size
                        size_hint_x: None
                        width: dp(200)
                        on_text: root.sign_wallet_changed()

                Nwboxlayout:
                    size_hint_y: None
                    height: dp(20)
                    orientation: 'horizontal'

                    Nwlabel:
                        halign: 'left'
                        valign: 'center'
                        _text: 'Address:'
                        text_size: self.size
                        size_hint_x: None
                        width: dp(100)
                        padding: [10, 0, 0, 0]

                Nwboxlayout:
                    size_hint_y: None
                    height: dp(35)
                    orientation: 'horizontal'

                    Nwlabel:
                        halign: 'left'
                        _text: ''
                        text_size: self.size
                        size_hint_x: None
                        width: dp(10)

                    Spinner:
                        id: address
                        halign: 'center'
                        valign: 'center'
                        _text: ''
                        text_size: self.size
                        size_hint_x: None
                        width: dp(325)
                        on_text: root.sign_address_changed()

                Nwboxlayout:
                    size_hint_y: None
                    height: dp(10)
                    orientation: 'horizontal'

                Nwboxlayout:
                    size_hint_y: None
                    height: dp(20)
                    orientation: 'horizontal'

                    Nwlabel:
                        halign: 'left'
                        valign: 'center'
                        _text: 'Public Key:'
                        text_size: self.size
                        size_hint_x: None
                        width: dp(150)
                        padding: [10, 0, 0, 0]

                Nwboxlayout:
                    size_hint_y: None
                    height: dp(45)
                    orientation: 'horizontal'

                    Nwlabel:
                        halign: 'left'
                        _text: ''
                        text_size: self.size
                        size_hint_x: None
                        width: dp(10)

                    TextInput:
                        id: pubk
                        halign: 'center'
                        valign: 'center'
                        _text: ''
                        text_size: self.size
                        size_hint_x: None
                        width: dp(325)

                Nwboxlayout:
                    size_hint_y: None
                    height: dp(10)
                    orientation: 'horizontal'

                Nwboxlayout:
                    size_hint_y: None
                    height: dp(20)
                    orientation: 'horizontal'

                    Nwlabel:
                        halign: 'left'
                        _text: 'Message:'
                        text_size: self.size
                        size_hint_x: None
                        width: dp(175)
                        padding: [10, 0, 0, 0]

                Nwboxlayout:
                    size_hint_y: None
                    height: dp(125)
                    orientation: 'horizontal'

                    Nwlabel:
                        halign: 'left'
                        _text: ''
                        text_size: self.size
                        size_hint_x: None
                        width: dp(10)

                    TextInput:
                        id: message
                        halign: 'left'
                        _text: ''
                        text_size: self.size
                        size_hint_x: None
                        width: dp(250)
                        padding: [10, 0, 0, 0]

                Nwboxlayout:
                    canvas:
                        Color:
                            rgba: 60/255, 61/255, 61/255, 1

                        Rectangle:
                            pos: self.pos
                            size: self.size
                    size_hint_y: None
                    height: dp(50)
                    orientation: 'horizontal'
                    padding: [0, 2, 0, 2]

                    Nwlabel:
                        halign: 'left'
                        _text: ''
                        text_size: self.size
                        size_hint_x: None
                        width: dp(10)

                    Nwbutton:
                        _text: 'Sign'
                        size_hint_x: None
                        width: dp(150)
                        on_press: root.sign_message()

                Nwboxlayout:
                    size_hint_y: None
                    height: dp(20)
                    orientation: 'horizontal'

                    Nwlabel:
                        halign: 'left'
                        _text: 'Signature:'
                        text_size: self.size
                        size_hint_x: None
                        width: dp(175)
                        padding: [10, 0, 0, 0]

                Nwboxlayout:
                    size_hint_y: None
                    height: dp(125)
                    orientation: 'horizontal'

                    Nwlabel:
                        halign: 'left'
                        _text: ''
                        text_size: self.size
                        size_hint_x: None
                        width: dp(10)

                    TextInput:
                        id: signature
                        halign: 'left'
                        _text: ''
                        text_size: self.size
                        size_hint_x: None
                        width: dp(250)
                        padding: [10, 0, 0, 0]

                Nwboxlayout:
                    canvas:
                        Color:
                            rgba: 60/255, 61/255, 61/255, 1

                        Rectangle:
                            pos: self.pos
                            size: self.size
                    size_hint_y: None
                    height: dp(50)
                    orientation: 'horizontal'
                    padding: [0, 2, 0, 2]

                    Nwlabel:
                        halign: 'left'
                        _text: ''
                        text_size: self.size
                        size_hint_x: None
                        width: dp(10)

                    Nwbutton:
                        _text: 'Verify'
                        size_hint_x: None
                        width: dp(150)
                        on_press: root.verify_message()

                Nwboxlayout:
                    size_hint_y: None
                    height: dp(25)
                    orientation: 'horizontal'

                    Nwlabel:
                        id: valid_sig
                        halign: 'left'
                        valign: 'center'
                        _text: ''
                        text_size: self.size
                        size_hint_x: None
                        width: dp(250)
                        padding: [10, 0, 0, 0]

    BoxLayout:
        canvas:
            Color:
                rgba: 60/255, 61/255, 61/255, 1

            Rectangle:
                pos: self.pos
                size: self.size
        size_hint_y: None
        height: dp(60)
        orientation: 'horizontal'

        Nwbutton:
            _text: 'Home'
            on_press: root.manager.current = 'home_screen'
