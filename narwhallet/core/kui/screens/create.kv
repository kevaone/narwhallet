<CreateScreen>
    wallet_name: wallet_name
    coin: coin
    mnemonic: mnemonic
    header: header
    btn_create: btn_create

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header
            value: 'Create New Wallet'

        BoxLayout:
            size_hint_y: None
            height: 35
            size_hint_x: None
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                text: 'Name:'
                text_size: self.size
                size_hint_x: None
                width: 75
                padding: [10, 0, 0, 0]

            TextInput:
                id: wallet_name
                halign: 'center'
                valign: 'center'
                text: ''
                text_size: self.size
                size_hint_x: None
                width: 200
                on_text: root.validate_name()

        BoxLayout:
            size_hint_y: None
            height: 10
            orientation: 'horizontal'

        BoxLayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'
            size_hint_x: None

            Nwlabel:
                halign: 'left'
                valign: 'center'
                text: 'Coin:'
                text_size: self.size
                size_hint_x: None
                width: 75
                padding: [10, 0, 0, 0]

            Spinner:
                id: coin
                halign: 'center'
                valign: 'center'
                text: 'KEVACOIN'
                text_size: self.size
                size_hint_x: None
                width: 200

        BoxLayout:
            size_hint_y: None
            height: 10
            orientation: 'horizontal'

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: 35
            orientation: 'horizontal'
            padding: [0, 2, 0, 2]

            Nwlabel:
                halign: 'left'
                text: ''
                text_size: self.size
                size_hint_x: None
                width: 10

            Nwbutton:
                text: 'Generate Mnemonic'
                size_hint_x: None
                width: 175
                on_press: root.generate_mnemonic()

        BoxLayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: 'Mnemonic Phrase:'
                text_size: self.size
                size_hint_x: None
                width: 175
                padding: [10, 0, 0, 0]

        BoxLayout:
            size_hint_y: None
            height: 125
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: ''
                text_size: self.size
                size_hint_x: None
                width: 10

            TextInput:
                id: mnemonic
                halign: 'left'
                text: ''
                text_size: self.size
                size_hint_x: None
                width: 250
                padding: [10, 0, 0, 0]
                on_text: root.validate_mnemonic()

        BoxLayout:
            orientation: 'horizontal'

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwbutton:
                text: 'Cancel'
                on_press: root.return_home()

            Nwbutton:
                id: btn_create
                text: 'Create'
                on_press: root.create_wallet()
