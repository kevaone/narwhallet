<CreateScreen>
    wallet_name: wallet_name
    coin: coin
    mnemonic: mnemonic
    mnemonic_lang: mnemonic_lang
    header: header
    btn_create: btn_create

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header
            value: 'Create New Wallet'

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                _text: 'Name:'
                text_size: self.size
                size_hint_x: None
                width: dp(75)
                padding: [10, 0, 0, 0]

            TextInput:
                id: wallet_name
                halign: 'center'
                valign: 'center'
                _text: ''
                text_size: self.size
                size_hint_x: None
                width: dp(175)
                on_text: root.validate_name()

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                _text: 'Coin:'
                text_size: self.size
                size_hint_x: None
                width: dp(75)
                padding: [10, 0, 0, 0]

            Spinner:
                id: coin
                halign: 'center'
                valign: 'center'
                text: 'KEVACOIN'
                text_size: self.size
                size_hint_x: None
                width: dp(175)

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                _text: 'Mnemonic Language:'
                text_size: self.size
                size_hint_x: None
                width: dp(175)
                padding: [10, 0, 0, 0]

            Spinner:
                id: mnemonic_lang
                halign: 'center'
                valign: 'center'
                text: 'ENGLISH'
                text_size: self.size
                size_hint_x: None
                width: dp(175)

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: dp(50)
            orientation: 'horizontal'
            padding: [0, 2, 0, 2]

            Nwlabel:
                halign: 'left'
                _text: ''
                text_size: self.size
                size_hint_x: None
                width: dp(10)

            Nwbutton:
                _text: 'Generate Mnemonic'
                size_hint_x: None
                width: dp(175)
                on_press: root.generate_mnemonic()

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                _text: 'Mnemonic Phrase:'
                text_size: self.size
                size_hint_x: None
                width: dp(175)
                padding: [10, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: dp(200)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                _text: ''
                text_size: self.size
                size_hint_x: None
                width: dp(10)

            TextInput:
                id: mnemonic
                halign: 'left'
                _text: ''
                text_size: self.size
                size_hint_x: None
                size_hint_y: None
                height: self.parent.height
                width: dp(350)
                padding: [10, 5, 10, 5]
                on_text: root.validate_mnemonic()

        Nwboxlayout:
            orientation: 'horizontal'

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: dp(60)
            orientation: 'horizontal'

            Nwbutton:
                _text: 'Cancel'
                on_press: root.return_home()

            Nwbutton:
                id: btn_create
                _text: 'Create'
                on_press: root.create_wallet()
