<AddressScreen>
    address: address
    balance: balance
    label: label
    qr_code: qr_code
    transactions: transactions
    transaction_list: transaction_list

    GridLayout:
        size: root.width, root.height
        cols: 1

        Nwlabel:
            text: 'Narwhallet'
            halign: 'left'
            valign: 'center'
            font_size: 37
            text_size: self.size
            size_hint_y: None
            height: 47
            padding_x: 5

        BoxLayout:
            size_hint_y: None
            height: 25
            orientation: 'horizontal'

            Nwlabel:
                id: address
                text: ''
                font_size: dp(18)
                padding_x: 10

        BoxLayout:
            size_hint_y: None
            height: 25
            orientation: 'horizontal'

            Nwlabel:
                text: 'Label='''
                font_size: dp(18)
                padding_x: 10

            Nwlabel:
                id: label
                text: ''
                font_size: dp(18)
                padding_x: 10

        BoxLayout:
            # size_hint_y: None
            # height: 65
            orientation: 'horizontal'

            QR_Code:
                id: qr_code

        BoxLayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                text: 'Transactions:'
                font_size: dp(15)
                size_hint_x: None
                padding_x: 10
                width: dp(120)

            Nwlabel:
                id: transactions
                text: '0'
                font_size: dp(15)

        BoxLayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                text: 'Balance:'
                font_size: dp(15)
                size_hint_x: None
                padding_x: 10
                width: dp(120)

            Nwlabel:
                id: balance
                text: '0.0'
                font_size: dp(15)

        BoxLayout:
            size_hint_y: None
            height: 10
            orientation: 'horizontal'

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                id: transaction_list
                canvas:
                    Color:
                        rgba: 60/255, 61/255, 61/255, 1

                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: None
                # height:75
                height: self.minimum_height * 15 if root.width <= dp(650) else self.minimum_height * 12
                cols: 1
                spacing: 5
                padding: 5

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: 35

            Nwbutton:
                text: 'Wallet'
                on_press: root.manager.current = 'wallet_screen'

            Nwbutton:
                text: 'Addresses'
                on_press: root.manager.current = 'addresses_screen'
