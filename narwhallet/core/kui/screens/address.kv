<AddressScreen>
    address: address
    balance: balance
    label: label
    qr_code: qr_code
    transactions: transactions
    transaction_list: transaction_list
    header: header

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        Nwboxlayout:
            size_hint_y: None
            height: 25
            orientation: 'horizontal'

            Nwlabel:
                text: ''
                size_hint_x: None
                width: 10

            Nwimage:
                source: 'narwhallet/core/kui/assets/clipboard_white.png'
                height: 25
                width: 25
                on_touch_down: if self.collide_point(*args[1].pos): root.manager.copy_to_clipboard(root.address.text)

            Nwlabel:
                id: address
                text: ''
                font_size: 18
                padding: [5, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: 25
            orientation: 'horizontal'

            Nwlabel:
                text: 'Label:'
                font_size: 18
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 70

            Nwlabel:
                id: label
                halign: 'left'
                text: ''
                font_size: 18

        Nwboxlayout:
            # size_hint_y: None
            # height: 65
            orientation: 'horizontal'

            QR_Code:
                id: qr_code

        Nwboxlayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                text: 'Transactions:'
                font_size: 15
                size_hint_x: None
                padding: [10, 0, 0, 0]
                width: 120

            Nwlabel:
                id: transactions
                text: '0'
                font_size: 15

        Nwboxlayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                text: 'Balance:'
                font_size: 15
                size_hint_x: None
                padding: [10, 0, 0, 0]
                width: 120

            Nwlabel:
                id: balance
                text: '0.0'
                font_size: 15

        Nwboxlayout:
            size_hint_y: None
            height: 10
            orientation: 'horizontal'

        RecycleView:
            id: transaction_list
            viewclass: 'TransactionListInfo'
            do_scroll_y: True
            bar_width: 15
            scroll_type: ['bars','content']

            RecycleGridLayout:
                canvas:
                    Color:
                        rgba: 60/255, 61/255, 61/255, 1

                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: None
                height: self.minimum_height
                default_size: None, 85 if root.width <= 650 else 60
                default_size_hint: 1, None
                cols: 1
                spacing: 5
                padding: 5

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: 35

            Nwbutton:
                text: 'Wallet'
                on_press: root.manager.current = 'wallet_screen'

            Nwbutton:
                text: 'Addresses'
                on_press: root.manager.current = 'addresses_screen'
