#:import _tr narwhallet.core.kui._translate

<ContentScreen>
    content_list: content_list
    header: header

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: dp(60)
            orientation: 'horizontal'

            Nwbutton:
                text: _tr.translate('Market')
                on_press: root.manager.market_screen.populate()

            Nwbutton:
                text: _tr.translate('My Auctions')
                on_press: root.manager.auctions_screen.populate()

            Nwbutton:
                text: _tr.translate('My Bids')
                on_press: root.manager.bids_screen.populate()

            Nwbutton:
                text: '!'

        Nwgrid:
            id: content_list
            viewclass: 'MarketListInfo'

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(60)

            Nwbutton:
                text: _tr.translate('Home')
                icon: 'narwhallet/core/kui/assets/home_white.png'
                icon_size: (dp(25), dp(25))
                icon_padding: dp(20)
                on_press: root.manager.current = 'home_screen'

            Nwbutton:
                text: _tr.translate('All')
                on_press: root.manager.all_screen.populate()

            Nwbutton:
                text: _tr.translate('Favorites')
                on_press: root.manager.favorites_screen.populate()

            Nwbutton:
                text: _tr.translate('NFT''s')
                on_press: root.manager.nft_screen.populate()
