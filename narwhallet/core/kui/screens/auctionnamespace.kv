<AuctionNamespaceScreen>
    wallet_balance: wallet_balance
    amount: amount
    payment_address: payment_address
    price: price
    description: description
    namespace_name: namespace_name
    namespace_address: namespace_address
    address_book: address_book
    valid_send_to: valid_send_to
    valid_amount: valid_amount
    valid_price: valid_price
    valid_description: valid_description
    fee: fee
    fee_rate: fee_rate
    txsize: txsize
    txhex: txhex
    header: header
    btn_send: btn_send

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        Nwboxlayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: 'Balance:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 100

            Nwlabel:
                id: wallet_balance
                halign: 'left'
                text: ''
                text_size: self.size

        Nwboxlayout:
            size_hint_y: None
            height: 10
            orientation: 'horizontal'

        Nwboxlayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                text: 'Amount:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 100

            TextInput:
                id: amount
                halign: 'left'
                text: ''
                text_size: self.size
                size_hint_x: None
                width: 175
                on_text: root.check_amount()

            Nwimage:
                id: valid_amount
                source: 'narwhallet/core/kui/assets/checkmark.png'
                size: (0, 0)

        Nwboxlayout:
            size_hint_y: None
            height: 10
            orientation: 'horizontal'

        Nwboxlayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: 'Payment Address:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 175

        Nwboxlayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                text: ''
                size_hint_x: None
                width: 10

            TextInput:
                id: payment_address
                halign: 'left'
                text: ''
                text_size: self.size
                size_hint_x: None
                width: 325
                on_text: root.check_payment_address()

            Nwlabel:
                text: ''
                size_hint_x: None
                width: 5

            Nwimage:
                id: address_book
                source: 'narwhallet/core/kui/assets/narwhal.png'
                on_touch_down: if self.collide_point(*args[1].pos): root.select_from_address_book()

            Nwimage:
                id: valid_send_to
                source: 'narwhallet/core/kui/assets/checkmark.png'
                size: (0, 0)

        Nwboxlayout:
            size_hint_y: None
            height: 10
            orientation: 'horizontal'

        Nwboxlayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                text: 'Asking Price:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 100

            TextInput:
                id: price
                halign: 'left'
                text: ''
                text_size: self.size
                size_hint_x: None
                width: 175
                on_text: root.check_price()

            Nwlabel:
                text: ''
                size_hint_x: None
                width: 5

            Nwimage:
                id: valid_price
                source: 'narwhallet/core/kui/assets/checkmark.png'
                size: (0, 0)

        Nwboxlayout:
            size_hint_y: None
            height: 10
            orientation: 'horizontal'

        Nwboxlayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: 'Description:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 100

        Nwboxlayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                text: ''
                size_hint_x: None
                width: 10

            TextInput:
                id: description
                halign: 'left'
                text: ''
                text_size: self.size
                size_hint_x: None
                width: 255
                on_text: root.check_desc()

            Nwlabel:
                text: ''
                size_hint_x: None
                width: 5

            Nwimage:
                id: valid_description
                source: 'narwhallet/core/kui/assets/checkmark.png'
                size: (0, 0)

        Nwboxlayout:
            size_hint_y: None
            height: 10
            orientation: 'horizontal'

        Nwboxlayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: 'NS:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 100

            Nwlabel:
                id: namespace_name
                halign: 'left'
                text: ''
                text_size: self.size

        Nwboxlayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: 'NS Address:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 100

            Nwlabel:
                id: namespace_address
                halign: 'left'
                text: ''
                text_size: self.size

        Nwboxlayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: 'Fee Rate:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 100

            Nwlabel:
                id: fee_rate
                halign: 'left'
                text: '0'
                text_size: self.size
                size_hint_x: None
                width: 175

        Nwboxlayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: 'Fee:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 100

            Nwlabel:
                id: fee
                halign: 'left'
                text: '0.0'
                text_size: self.size
                size_hint_x: None
                width: 175

        Nwboxlayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: 'TX Size:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 100

            Nwlabel:
                id: txsize
                halign: 'left'
                text: '0.0'
                text_size: self.size
                size_hint_x: None
                width: 175

        Nwboxlayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                text: 'TX Hex:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 100

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            bar_width: 15
            scroll_type: ['bars','content']

            Nwboxlayout:
                size_hint_y: None
                height: 380
                orientation: 'horizontal'

                Nwlabel:
                    id: txhex
                    halign: 'left'
                    valign: 'top'
                    text: '0.0'
                    text_size: self.size
                    size_hint_x: None
                    size_hint_y: None
                    padding: [20, 0, 0, 0]
                    width: root.width - 40
                    height: 380

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwbutton:
                text: 'Cancel'
                on_press: root.manager.current = 'namespace_screen'

            Nwbutton:
                id: btn_send
                text: 'Create TX'
                on_press: root.process_send() if self.text == 'Send' else root.build_send()
