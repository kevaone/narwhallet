<AuctionNamespaceScreen>
    wallet_balance: wallet_balance
    amount: amount
    payment_address: payment_address
    price: price
    description: description
    namespace_name: namespace_name
    namespace_address: namespace_address
    address_book: address_book
    valid_send_to: valid_send_to
    valid_amount: valid_amount
    valid_price: valid_price
    valid_description: valid_description
    header: header
    btn_send: btn_send

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        Nwboxlayout:
            size_hint_y: None
            height: dp(20)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                _text: 'Balance:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(100)

            Nwlabel:
                id: wallet_balance
                halign: 'left'
                _text: ''
                text_size: self.size

        Nwboxlayout:
            size_hint_y: None
            height: dp(20)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                _text: 'Amount:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(100)

            Nwlabel:
                id: amount
                halign: 'left'
                _text: ''
                text_size: self.size
                size_hint_x: None
                width: dp(175)
                on_text: root.check_amount()

            Nwimage:
                id: valid_amount
                source: 'narwhallet/core/kui/assets/checkmark.png'
                size: (0, 0)

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        Nwboxlayout:
            size_hint_y: None
            height: dp(20)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                _text: 'Payment Address:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(175)

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                _text: ''
                size_hint_x: None
                width: dp(10)

            TextInput:
                id: payment_address
                halign: 'left'
                _text: ''
                text_size: self.size
                size_hint_x: None
                width: dp(325)
                write_tab: False
                on_text: root.check_payment_address()

            Nwlabel:
                _text: ''
                size_hint_x: None
                width: dp(5)

            Nwimage:
                id: address_book
                source: 'narwhallet/core/kui/assets/plus_white.png'
                on_touch_down: if self.collide_point(*args[1].pos): root.get_address_from_wallet()

            Nwimage:
                id: address_book
                source: 'narwhallet/core/kui/assets/narwhal.png'
                on_touch_down: if self.collide_point(*args[1].pos): root.select_from_address_book()

            Nwimage:
                id: valid_send_to
                source: 'narwhallet/core/kui/assets/checkmark.png'
                size: (0, 0)

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                _text: 'Asking Price:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(100)

            TextInput:
                id: price
                halign: 'left'
                _text: ''
                text_size: self.size
                size_hint_x: None
                width: dp(175)
                write_tab: False
                on_text: root.check_price()

            Nwlabel:
                _text: ''
                size_hint_x: None
                width: dp(5)

            Nwimage:
                id: valid_price
                source: 'narwhallet/core/kui/assets/checkmark.png'
                size: (0, 0)

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        Nwboxlayout:
            size_hint_y: None
            height: dp(20)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                _text: 'Description (' + str(root.value_size) + '/3072):'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(225)

        Nwboxlayout:
            size_hint_y: None
            height: dp(150)
            orientation: 'horizontal'

            Nwlabel:
                _text: ''
                size_hint_x: None
                width: dp(10)

            TextInput:
                id: description
                halign: 'left'
                _text: ''
                text_size: self.size
                size_hint_x: None
                size_hint_y: None
                width: root.width - dp(20)
                write_tab: False
                on_text: root.check_desc()
                height: dp(150)

            Nwlabel:
                _text: ''
                size_hint_x: None
                width: dp(5)

            Nwimage:
                id: valid_description
                source: 'narwhallet/core/kui/assets/checkmark.png'
                size: (0, 0)

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        Nwboxlayout:
            size_hint_y: None
            height: dp(20)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                _text: 'NS:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(100)

            Nwlabel:
                id: namespace_name
                halign: 'left'
                _text: ''
                text_size: self.size

        Nwboxlayout:
            size_hint_y: None
            height: dp(20)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                _text: 'NS Address:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(100)

            Nwlabel:
                id: namespace_address
                halign: 'left'
                _text: ''
                text_size: self.size

        Nwboxlayout:
            orientation: 'horizontal'

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: dp(60)
            orientation: 'horizontal'

            Nwbutton:
                _text: 'Cancel'
                on_press: root.manager.current = 'namespace_screen'

            Nwbutton:
                id: btn_send
                _text: 'Create TX'
                on_press: root.build_send()
