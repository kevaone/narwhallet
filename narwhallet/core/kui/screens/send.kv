<SendScreen>
    wallet_balance: wallet_balance
    send_to: send_to
    amount: amount
    address_book: address_book
    valid_send_to: valid_send_to
    valid_amount: valid_amount
    fee: fee
    fee_rate: fee_rate
    txsize: txsize
    txhex: txhex
    header: header
    btn_send: btn_send

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        BoxLayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: 'Balance:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 100

            Nwlabel:
                id: wallet_balance
                halign: 'left'
                text: ''
                text_size: self.size

        BoxLayout:
            size_hint_y: None
            height: 25
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: 'Send To:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 100

        BoxLayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                text: ''
                size_hint_x: None
                width: 10

            TextInput:
                id: send_to
                halign: 'left'
                valign: 'center'
                text: ''
                text_size: self.size
                size_hint_x: None
                width: 325
                on_text: root.check_address()

            Nwlabel:
                text: ''
                size_hint_x: None
                width: 5

            Nwimage:
                id: address_book
                source: 'narwhallet/core/kui/assets/narwhal.png'
                on_touch_down: if self.collide_point(*args[1].pos): root.select_from_address_book()

            Nwimage:
                id: valid_send_to
                source: 'narwhallet/core/kui/assets/checkmark.png'
                size: (0, 0)

        BoxLayout:
            size_hint_y: None
            height: 10
            orientation: 'horizontal'

        BoxLayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                text: 'Amount:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 100

            TextInput:
                id: amount
                halign: 'center'
                valign: 'center'
                text: ''
                text_size: self.size
                size_hint_x: None
                width: 155
                on_text: root.check_amount()

            Nwimage:
                id: valid_amount
                source: 'narwhallet/core/kui/assets/checkmark.png'
                size: (0, 0)

        BoxLayout:
            size_hint_y: None
            height: 10
            orientation: 'horizontal'

        BoxLayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                text: 'Fee Rate:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 100

            Nwlabel:
                id: fee_rate
                halign: 'left'
                valign: 'center'
                text: '0'
                text_size: self.size
                size_hint_x: None
                width: 175

        BoxLayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                text: 'Fee:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 100

            Nwlabel:
                id: fee
                halign: 'left'
                valign: 'center'
                text: '0.0'
                text_size: self.size
                size_hint_x: None
                width: 175

        BoxLayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                text: 'TX Size:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 100

            Nwlabel:
                id: txsize
                halign: 'left'
                valign: 'center'
                text: '0.0'
                text_size: self.size
                size_hint_x: None
                width: 175

        BoxLayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                text: 'TX Hex:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 100

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            bar_width: 6

            BoxLayout:
                size_hint_y: None
                height: 380
                orientation: 'horizontal'

                Nwlabel:
                    id: txhex
                    halign: 'left'
                    valign: 'top'
                    text: '0.0'
                    text_size: self.size
                    size_hint_x: None
                    size_hint_y: None
                    padding: [20, 0, 0, 0]
                    width: root.width - 40
                    height: 380

        BoxLayout:
            orientation: 'horizontal'

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwbutton:
                text: 'Cancel'
                on_press: root.manager.current = 'wallet_screen'

            Nwbutton:
                id: btn_send
                text: 'Create TX'
                disabled: True
                on_press: root.process_send() if self.text == 'Send' else root.build_send()
