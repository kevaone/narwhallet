<SendScreen>
    wallet_balance: wallet_balance
    send_to: send_to
    amount: amount
    address_book: address_book
    valid_send_to: valid_send_to
    valid_amount: valid_amount
    header: header
    btn_send: btn_send

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        Nwboxlayout:
            size_hint_y: None
            height: dp(20)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                _text: 'Balance:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(100)

            Nwlabel:
                id: wallet_balance
                halign: 'left'
                _text: ''
                text_size: self.size

        Nwboxlayout:
            size_hint_y: None
            height: dp(25)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                _text: 'Send To:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(100)

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                _text: ''
                size_hint_x: None
                width: dp(10)

            TextInput:
                id: send_to
                halign: 'left'
                valign: 'center'
                _text: ''
                text_size: self.size
                size_hint_x: None
                width: dp(325)
                on_text: root.check_address()

            Nwlabel:
                _text: ''
                size_hint_x: None
                width: dp(5)

            Nwimage:
                id: address_book
                source: 'narwhallet/core/kui/assets/narwhal.png'
                on_touch_down: if self.collide_point(*args[1].pos): root.select_from_address_book()

            Nwimage:
                id: valid_send_to
                source: 'narwhallet/core/kui/assets/checkmark.png'
                size: (0, 0)

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                _text: 'Amount:'
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(100)

            TextInput:
                id: amount
                halign: 'center'
                valign: 'center'
                _text: ''
                text_size: self.size
                size_hint_x: None
                width: dp(155)
                on_text: root.check_amount()

            Nwimage:
                id: valid_amount
                source: 'narwhallet/core/kui/assets/checkmark.png'
                size: (0, 0)

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        Nwboxlayout:
            orientation: 'horizontal'

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: dp(60)
            orientation: 'horizontal'

            Nwbutton:
                _text: 'Cancel'
                on_press: root.manager.current = 'wallet_screen'

            Nwbutton:
                id: btn_send
                _text: 'Create TX'
                disabled: True
                on_press: root.build_send()
