<HomeScreen>
    wallet_list: wallet_list
    header: header

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: dp(60)
            orientation: 'horizontal'

            Nwbutton:
                _text: 'Create'
                icon: 'narwhallet/core/kui/assets/create.png'
                icon_size: (dp(23), dp(20))
                icon_padding: dp(19)
                on_press: root.manager.create_screen.populate()

            Nwbutton:
                _text: 'Restore'
                icon: 'narwhallet/core/kui/assets/restore.png'
                icon_size: (dp(20), dp(20))
                icon_padding: dp(21)
                on_press: root.manager.restore_screen.populate()

            Nwbutton:
                _text: 'Book'
                icon: 'narwhallet/core/kui/assets/address-book.png'
                icon_size: (dp(20), dp(20))
                icon_padding: dp(17)
                on_press: root.manager.addressbook_screen.populate()

        Nwgrid:
            id: wallet_list
            viewclass: 'WalletListInfo'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(60)

            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size

            Nwbutton:
                _text: 'Content'
                icon: 'narwhallet/core/kui/assets/content_globe.png'
                icon_size: (dp(20), dp(20))
                icon_padding: dp(22)
                on_press: root.manager.content_screen.populate()

            Nwbutton:
                _text: 'Utils'
                icon: 'narwhallet/core/kui/assets/toolbox.png'
                icon_size: (dp(20), dp(20))
                icon_padding: dp(16)
                on_press: root.manager.utils_screen.populate()

            Nwbutton:
                _text: 'Settings'
                icon: 'narwhallet/core/kui/assets/screwdriver-wrench.png'
                icon_size: (dp(20), dp(20))
                icon_padding: dp(22)
                on_press: root.manager.current = 'settings_screen'
