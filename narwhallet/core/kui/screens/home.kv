#:import _tr narwhallet.core.kui._translate

<HomeScreen>
    wallet_list: wallet_list
    header: header

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: dp(60)
            orientation: 'horizontal'

            Nwbutton:
                text: _tr.translate('Create')
                icon: 'narwhallet/core/kui/assets/plus_white.png'
                icon_size: (dp(25), dp(25))
                icon_padding: dp(17)
                on_press: root.manager.create_screen.populate()

            Nwbutton:
                text: _tr.translate('Restore')
                icon: 'narwhallet/core/kui/assets/wrench_white.png'
                icon_size: (dp(25), dp(25))
                icon_padding: dp(20)
                on_press: root.manager.restore_screen.populate()

            Nwbutton:
                text: _tr.translate('Book')
                icon: 'narwhallet/core/kui/assets/menuList_white.png'
                icon_size: (dp(25), dp(25))
                icon_padding: dp(15)
                on_press: root.manager.addressbook_screen.populate()

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            bar_width: dp(15)
            scroll_type: ['bars','content']

            GridLayout:
                id: wallet_list
                canvas:
                    Color:
                        rgba: 60/255, 61/255, 61/255, 1

                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: None
                height: self.minimum_height * dp(15) if root.width >= dp(650) else self.minimum_height * dp(15)
                cols: 1
                spacing: dp(5)
                padding: dp(5)

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(60)

            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size

            Nwbutton:
                text: _tr.translate('Content')
                on_press: root.manager.content_screen.populate()

            Nwbutton:
                text: _tr.translate('Utils')
                on_press: root.manager.utils_screen.populate()

            Nwbutton:
                text: _tr.translate('Settings')
                icon: 'narwhallet/core/kui/assets/gear_white.png'
                icon_size: (dp(25), dp(25))
                icon_padding: dp(20)
                on_press: root.manager.current = 'settings_screen'
