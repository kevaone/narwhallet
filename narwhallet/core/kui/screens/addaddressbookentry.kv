<AddAddressBookEntryScreen>
    address: address
    address_name: address_name
    label: label
    header: header

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header
            value: 'Address Book - Add Entry'

        Nwboxlayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                valign: 'center'
                text: 'Address:'
                font_size: 20
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 100

        Nwboxlayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                text: ''
                size_hint_x: None
                width: 10

            TextInput:
                id: address
                valign: 'center'
                halign: 'center'
                text: ''
                text_size: self.size
                text_size: self.size
                size_hint_x: None
                width: 290

        Nwboxlayout:
            size_hint_y: None
            height: 10
            orientation: 'horizontal'

        Nwboxlayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                text: 'Coin:'
                valign: 'center'
                font_size: 20
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 100

            Spinner:
                id: coin
                halign: 'center'
                valign: 'center'
                text: 'KEVACOIN'
                text_size: self.size
                size_hint_x: None
                width: 200

        Nwboxlayout:
            size_hint_y: None
            height: 10
            orientation: 'horizontal'

        Nwboxlayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                text: 'Name:'
                valign: 'center'
                font_size: 20
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 100

            TextInput:
                id: address_name
                valign: 'center'
                halign: 'center'
                text: ''
                text_size: self.size
                size_hint_x: None
                width: 200

        Nwboxlayout:
            size_hint_y: None
            height: 10
            orientation: 'horizontal'

        Nwboxlayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                text: 'Label:'
                valign: 'center'
                font_size: 20
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: 100

            TextInput:
                id: label
                valign: 'center'
                halign: 'center'
                text: ''
                text_size: self.size
                size_hint_x: None
                width: 200

        Nwboxlayout:
            orientation: 'horizontal'

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: 35

            Nwbutton:
                text: 'Cancel'
                on_press: root.cancel()

            Nwbutton:
                text: 'Add'
                on_press: root.add_entry()
