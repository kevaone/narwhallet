#:import _tr narwhallet.core.kui._translate

<AddAddressBookEntryScreen>
    address: address
    address_name: address_name
    label: label
    header: header

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header
            value: _tr.translate('Address Book - Add Entry')

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                valign: 'center'
                text: _tr.translate('Address:')
                font_size: dp(20)
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(100)

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                text: ''
                size_hint_x: None
                width: dp(10)

            TextInput:
                id: address
                valign: 'center'
                halign: 'center'
                text: ''
                text_size: self.size
                text_size: self.size
                size_hint_x: None
                width: dp(290)

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                text: _tr.translate('Coin:')
                valign: 'center'
                font_size: dp(20)
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(100)

            Spinner:
                id: coin
                halign: 'center'
                valign: 'center'
                text: 'KEVACOIN'
                text_size: self.size
                size_hint_x: None
                width: dp(200)

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                text: _tr.translate('Name:')
                valign: 'center'
                font_size: dp(20)
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(100)

            TextInput:
                id: address_name
                valign: 'center'
                halign: 'center'
                text: ''
                text_size: self.size
                size_hint_x: None
                width: dp(200)

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                text: _tr.translate('Label:')
                valign: 'center'
                font_size: dp(20)
                text_size: self.size
                padding: [10, 0, 0, 0]
                size_hint_x: None
                width: dp(100)

            TextInput:
                id: label
                valign: 'center'
                halign: 'center'
                text: ''
                text_size: self.size
                size_hint_x: None
                width: dp(200)

        Nwboxlayout:
            orientation: 'horizontal'

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(60)

            Nwbutton:
                text: _tr.translate('Cancel')
                on_press: root.cancel()

            Nwbutton:
                text: _tr.translate('Add')
                on_press: root.add_entry()
