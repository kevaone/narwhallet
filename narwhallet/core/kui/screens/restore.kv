<RestoreScreen>
    wallet_name: wallet_name
    coin: coin
    data: data
    header: header
    btn_restore: btn_restore

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header
            value: 'Restore Wallet'

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                _text: 'Name:'
                text_size: self.size
                size_hint_x: None
                width: dp(75)
                padding: [10, 0, 0, 0]

            TextInput:
                id: wallet_name
                halign: 'center'
                valign:'center'
                _text: ''
                text_size: self.size
                size_hint_x: None
                width: dp(175)
                write_tab: False
                on_text: root.validate_name()

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                valign: 'center'
                _text: 'Coin:'
                text_size: self.size
                size_hint_x: None
                width: dp(75)
                padding: [10, 0, 0, 0]

            Spinner:
                id: coin
                halign: 'center'
                valign: 'center'
                text: 'KEVACOIN'
                text_size: self.size
                size_hint_x: None
                width: dp(175)

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                _text: 'Data:'
                text_size: self.size
                size_hint_x: None
                width: dp(75)
                padding: [10, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: dp(125)
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                _text: ''
                text_size: self.size
                size_hint_x: None
                width: dp(10)

            TextInput:
                id: data
                halign: 'left'
                _text: ''
                text_size: self.size
                size_hint_x: None
                width: dp(250)
                write_tab: False
                on_text: root.validate_data()

        Nwboxlayout:
            orientation: 'horizontal'

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: dp(60)
            orientation: 'horizontal'

            Nwbutton:
                _text: 'Cancel'
                on_press: root.return_home()

            Nwbutton:
                id: btn_restore
                _text: 'Restore'
                on_press: root.restore()
