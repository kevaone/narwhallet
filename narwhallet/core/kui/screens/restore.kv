<RestoreScreen>
    wallet_name: wallet_name
    coin: coin
    data: data
    header: header
    btn_restore: btn_restore

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header
            value: 'Restore Wallet'

        BoxLayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: 'Name:'
                text_size: self.size
                size_hint_x: None
                width: 75
                padding: [10, 0, 0, 0]

            TextInput:
                id: wallet_name
                halign: 'center'
                valign:'center'
                text: ''
                text_size: self.size
                size_hint_x: None
                width: 175
                on_text: root.validate_name()

        BoxLayout:
            size_hint_y: None
            height: 10
            orientation: 'horizontal'

        BoxLayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: 'Coin:'
                text_size: self.size
                size_hint_x: None
                width: 75
                padding: [10, 0, 0, 0]

            Spinner:
                id: coin
                halign: 'center'
                valign: 'center'
                text: 'KEVACOIN'
                text_size: self.size
                size_hint_x: None
                width: 175

        BoxLayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: 'Data:'
                text_size: self.size
                size_hint_x: None
                width: 75
                padding: [10, 0, 0, 0]

        BoxLayout:
            size_hint_y: None
            height: 125
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: ''
                text_size: self.size
                size_hint_x: None
                width: 10

            TextInput:
                id: data
                halign: 'left'
                text: ''
                text_size: self.size
                size_hint_x: None
                width: 250
                on_text: root.validate_data()

        BoxLayout:
            orientation: 'horizontal'

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwbutton:
                text: 'Cancel'
                on_press: root.return_home()

            Nwbutton:
                id: btn_restore
                text: 'Restore'
                on_press: root.restore()
