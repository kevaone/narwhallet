<PendingScreen>
    wallet_list: wallet_list

    GridLayout:
        size: root.width, root.height
        cols: 1

        Nwlabel:
            text: 'Narwhallet'
            halign: 'left'
            valign: 'center'
            font_size: 37
            text_size: self.size
            size_hint_y: None

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwbutton:
                text: 'Accept'
                on_press: root.manager.current = 'create_screen'

            Nwbutton:
                text: 'btn'
                on_press: root.manager.current = 'restore_screen'

            Nwbutton:
                text: '!'

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            bar_width: 6

            GridLayout:
                id: wallet_list
                canvas:
                    Color:
                        rgba: 1, .1, .7, 1

                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: None
                height: self.minimum_height * 20
                cols: 1
                spacing: 5
                padding: 5

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: 35

            Nwbutton:
                text: 'Content'
                on_press: root.manager.current = 'content_screen'

            # Nwbutton:
            #     text: 'Settings'
            #     on_press: root.manager.current = 'settings_screen'
