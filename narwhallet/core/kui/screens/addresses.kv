<AddressesScreen>
    address_list: address_list
    header: header

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        BoxLayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                text: 'Addresses'
                halign: 'left'
                font_size: 25
                text_size: self.size
                padding: [10, 0, 0, 0]

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: 35

            Nwbutton:
                text: 'Increase Pool'
                on_press: root.increase_address_pool()

        RecycleView:
            id: address_list
            viewclass: 'AddressListInfo'
            do_scroll_y: True
            bar_width: 6

            RecycleGridLayout:
                size_hint_y: None
                cols: 1
                height: self.minimum_height
                default_size: None, 85
                default_size_hint: 1, None
                spacing: 5
                padding: 5

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: 35

            # Nwbutton:
            #     text: 'Home'
            #     on_press: root.manager.current = 'home_screen'

            Nwbutton:
                text: 'Wallet'
                on_press: root.manager.current = 'wallet_screen'
