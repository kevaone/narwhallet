<AddressesScreen>
    address_list: address_list
    header: header
    btn_add: btn_add

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                text: 'Addresses'
                halign: 'left'
                font_size: dp(25)
                text_size: self.size
                padding: [10, 0, 0, 0]

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)

            Nwbutton:
                id: btn_add
                text: 'Increase Pool'
                on_press: root.btn_add_click()

        RecycleView:
            id: address_list
            viewclass: 'AddressListInfo'
            do_scroll_y: True
            bar_width: dp(15)
            scroll_type: ['bars','content']

            RecycleGridLayout:
                canvas:
                    Color:
                        rgba: 60/255, 61/255, 61/255, 1

                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: None
                cols: 1
                height: self.minimum_height
                default_size: None, dp(75)
                default_size_hint: 1, None
                spacing: dp(5)
                padding: dp(5)

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(60)

            # Nwbutton:
            #     text: 'Home'
            #     on_press: root.manager.current = 'home_screen'

            Nwbutton:
                text: 'Wallet'
                on_press: root.manager.current = 'wallet_screen'
