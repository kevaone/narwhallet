<OffersScreen>
    bid_list: bid_list
    header: header

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        RecycleView:
            id: bid_list
            viewclass: 'MarketListInfo'
            do_scroll_x: False
            do_scroll_y: True
            bar_width: 15
            scroll_type: ['bars','content']

            RecycleGridLayout:
                canvas:
                    Color:
                        rgba: 60/255, 61/255, 61/255, 1

                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: None
                height: self.minimum_height
                default_size: None, 85
                default_size_hint: 1, None
                cols: 1
                spacing: 5
                padding: 5

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: 35

            Nwbutton:
                text: 'Content'
                on_press: root.manager.current = 'content_screen'
