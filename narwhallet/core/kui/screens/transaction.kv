<TransactionScreen>
    txid: txid
    tx_hash: tx_hash
    version: version
    tx_size: tx_size
    vsize: vsize
    locktime: locktime
    blockhash: blockhash
    vin: vin
    vout: vout
    hex: hex
    confirmations: confirmations
    time: time
    blocktime: blocktime
    header: header

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        Nwboxlayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: 'TX ID:'
                text_size: self.size
                size_hint_x: None
                width: 85
                padding: [10, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: 40 if root.width <= 650 else 20

            Nwlabel:
                id: txid
                halign: 'left'
                text: ''
                text_size: self.size
                padding: [10, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: 'TX Hash:'
                text_size: self.size
                size_hint_x: None
                width: 85
                padding: [10, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: 40 if root.width <= 650 else 20

            Nwlabel:
                id: tx_hash
                halign: 'left'
                text: ''
                text_size: self.size
                padding: [10, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: 'Block Hash:'
                text_size: self.size
                size_hint_x: None
                width: 85
                padding: [10, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: 40 if root.width <= 650 else 20

            Nwlabel:
                id: blockhash
                halign: 'left'
                text: ''
                text_size: self.size
                padding: [10, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: 'Block Time:'
                text_size: self.size
                size_hint_x: None
                width: 85
                padding: [10, 0, 0, 0]

            Nwlabel:
                id: blocktime
                halign: 'left'
                text: ''
                text_size: self.size

        Nwboxlayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: 'TX Size:'
                text_size: self.size
                size_hint_x: None
                width: 85
                padding: [10, 0, 0, 0]

            Nwlabel:
                id: tx_size
                halign: 'left'
                text: ''
                text_size: self.size
                size_hint_x: None
                width: 85

            Nwlabel:
                halign: 'left'
                text: 'vsize:'
                text_size: self.size
                size_hint_x: None
                width: 65

            Nwlabel:
                id: vsize
                halign: 'left'
                text: ''
                text_size: self.size
                size_hint_x: None
                width: 50

        Nwboxlayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: 'time:'
                text_size: self.size
                padding: [10, 0, 0, 0]

            Nwlabel:
                id: time
                halign: 'left'
                text: ''
                text_size: self.size

        Nwboxlayout:
            size_hint_y: None
            height: 20

            Nwlabel:
                halign: 'left'
                text: 'version:'
                text_size: self.size
                padding: [10, 0, 0, 0]

            Nwlabel:
                id: version
                halign: 'left'
                text: ''
                text_size: self.size

        Nwboxlayout:
            size_hint_y: None
            height: 20

            Nwlabel:
                halign: 'left'
                text: 'confirmation:'
                text_size: self.size
                padding: [10, 0, 0, 0]

            Nwlabel:
                id: confirmations
                halign: 'left'
                text: ''
                text_size: self.size

        Nwboxlayout:
            size_hint_y: None
            height: 20

            Nwlabel:
                halign: 'left'
                text: 'lock time:'
                text_size: self.size
                padding: [10, 0, 0, 0]

            Nwlabel:
                id: locktime
                halign: 'left'
                text: ''
                text_size: self.size

        Nwboxlayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                text: 'Inputs:'
                halign: 'left'
                text_size: self.size
                padding: [10, 0, 0, 0]

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            bar_width: 15
            scroll_type: ['bars','content']

            GridLayout:
                id: vin
                canvas:
                    Color:
                        rgba: 60/255, 61/255, 61/255, 1

                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: None
                # height: self.minimum_height * 15
                height: self.minimum_height * 9 if root.width <= 650 else self.minimum_height * 7
                cols: 1
                spacing: 5
                padding: 5

        Nwboxlayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                text: 'Outputs:'
                halign: 'left'
                text_size: self.size
                padding: [10, 0, 0, 0]

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            bar_width: 15
            scroll_type: ['bars','content']

            GridLayout:
                id: vout
                canvas:
                    Color:
                        rgba: 60/255, 61/255, 61/255, 1

                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: None
                # height: self.minimum_height * 15
                height: self.minimum_height * 14 if root.width <= 650 else self.minimum_height * 7
                cols: 1
                spacing: 5
                padding: 5


        Nwboxlayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                halign: 'left'
                text: 'hex:'
                text_size: self.size
                padding: [10, 0, 0, 0]

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            bar_width: 15
            scroll_type: ['bars','content']

            Nwboxlayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 250

                Nwlabel:
                    id: hex
                    halign: 'left'
                    valign: 'top'
                    text: ''
                    text_size: self.size
                    # size_hint_y: None
                    padding: [10, 0, 0, 0]

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            # Nwbutton:
            #     text: 'Home'
            #     on_press: root.manager.current = 'home_screen'

            Nwbutton:
                text: 'Wallet'
                on_press: root.manager.current = 'wallet_screen'
