                        on_text: root.update_ipfs()

                BoxLayout:
                    size_hint_y: None
                    height: 35
                    orientation: 'horizontal'

                    ToggleButton:
                        id: iserver_ipfs_0
                        text_size: self.size
                        font_size: 20
                        size_hint_x: None
                        size_hint_y: None
                        height: 30
                        width: 150
                        text: 'Active'
                        group: 'ipfs'
                        # state: 'down'
                        halign: 'center'
                        valign: 'center'
                        on_press: root.update_ipfs_active(0)

                BoxLayout:
                    size_hint_y: None
