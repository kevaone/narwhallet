                BoxLayout: # Spacer

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwbutton:
                text: 'Home'
                icon: 'narwhallet/core/kui/assets/home_white.png'
                icon_size: (25, 25)
                icon_padding: 20
                on_press: root.manager.current = 'home_screen'
