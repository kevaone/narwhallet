<SettingsScreen>
    iserver_host: iserver_host
    iserver_port: iserver_port
    iserver_althost: iserver_althost
    iserver_altport: iserver_altport
    iserver_ssl_0: iserver_ssl_0
    iserver_verify_0: iserver_verify_0
    iserver_altssl_0: iserver_altssl_0
    iserver_altverify_0: iserver_altverify_0
    iserver_ssl_1: iserver_ssl_1
    iserver_verify_1: iserver_verify_1
    iserver_altssl_1: iserver_altssl_1
    iserver_altverify_1: iserver_altverify_1
    iserver_ipfs_0: iserver_ipfs_0
    iserver_ipfs_1: iserver_ipfs_1
    iserver_active_0: iserver_active_0
    iserver_active_1: iserver_active_1
    header: header
    show_change: show_change
    connection_status: ''

    GridLayout:
        size_hint: None, None
        size: root.width, root.height
        cols: 1

        Header:
            id: header
            value: 'Settings'

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            bar_width: 15
            scroll_type: ['bars','content']

            GridLayout:
                size_hint_y: None
                rows: 19
                height: 35 * self.rows + (10*self.rows) if root.width <= 650 else 35 * self.rows + (10*self.rows)
                cols: 1
                # row_default_height: 65 if root.width <= 650 else 65
                spacing: 5
                padding: 5

                BoxLayout:
                    size_hint_y: None
                    height: 35
                    orientation: 'horizontal'

                    Nwlabel:
                        text: 'General Settings'
                        halign: 'left'
                        font_size: 25
                        text_size: self.size
                        padding: [10, 0, 0, 0]

                BoxLayout:
                    size_hint_y: None
                    height: 35
                    orientation: 'horizontal'

                    Nwlabel:
                        text: 'Show Change Addresses:'
                        halign: 'left'
                        valign: 'center'
                        text_size: self.size
                        padding: [10, 0, 0, 0]
                        size_hint_x: None
                        width: 200

                    ToggleButton:
                        id: show_change
                        text_size: self.size
                        font_size: 20
                        size_hint_x: None
                        size_hint_y: None
                        height: 30
                        width: 75
                        text: 'Yes'
                        group: 'change'
                        # state: 'down'
                        halign: 'center'
                        valign: 'center'
                        on_press: root.update_show_change_option()

                BoxLayout:
                    size_hint_y: None
                    height: 35
                    orientation: 'horizontal'

                    Nwlabel:
                        text: 'Connection Settings'
                        halign: 'left'
                        font_size: 25
                        text_size: self.size
                        padding: [10, 0, 0, 0]

                BoxLayout:
                    size_hint_y: None
                    height: 35
                    orientation: 'horizontal'

                    Nwlabel:
                        text: 'Status:'
                        halign: 'left'
                        valign: 'center'
                        text_size: self.size
                        padding: [10, 0, 0, 0]
                        size_hint_x: None
                        width: 115

                    Nwlabel:
                        text: root.connection_status
                        halign: 'left'
                        valign: 'center'
                        text_size: self.size

                BoxLayout:
                    size_hint_y: None
                    height: 35
                    orientation: 'horizontal'

                    Nwlabel:
                        text: 'Server:'
                        halign: 'left'
                        valign: 'center'
                        text_size: self.size
                        padding: [10, 0, 0, 0]
                        size_hint_x: None
                        width: 115

                    TextInput:
                        id: iserver_host
                        halign: 'left'
                        text: 'kva.keva.one'
                        text_size: self.size
                        size_hint_x: None
                        size_hint_y: None
                        height: 30
                        width: 250
                        on_text: root.update_host()

                BoxLayout:
                    size_hint_y: None
                    height: 35
                    orientation: 'horizontal'

                    Nwlabel:
                        text: 'Port:'
                        halign: 'left'
                        valign: 'center'
                        text_size: self.size
                        padding: [10, 0, 0, 0]
                        size_hint_x: None
                        width: 115

                    TextInput:
                        id: iserver_port
                        halign: 'left'
                        text: '50002'
                        text_size: self.size
                        size_hint_x: None
                        size_hint_y: None
                        height: 30
                        width: 250
                        on_text: root.update_port()

                BoxLayout:
                    size_hint_y: None
                    height: 35
                    orientation: 'horizontal'

                    Nwlabel:
                        text: 'SSL:'
                        halign: 'left'
                        valign: 'center'
                        text_size: self.size
                        padding: [10, 0, 0, 0]
                        size_hint_x: None
                        width: 115

                    ToggleButton:
                        id: iserver_ssl_0
                        text_size: self.size
                        font_size: 20
                        size_hint_x: None
                        size_hint_y: None
                        height: 30
                        width: 75
                        text: 'Yes'
                        group: 'ssl'
                        # state: 'down'
                        halign: 'center'
                        valign: 'center'
                        on_press: root.update_ssl_option(0, 3, True)

                    ToggleButton:
                        id: iserver_ssl_1
                        text_size: self.size
                        font_size: 20
                        size_hint_x: None
                        size_hint_y: None
                        height: 30
                        width: 75
                        text: 'No'
                        group: 'ssl'
                        # state: 'down'
                        halign: 'center'
                        valign: 'center'
                        on_press: root.update_ssl_option(0, 3, False)

                BoxLayout:
                    size_hint_y: None
                    height: 35
                    orientation: 'horizontal'

                    Nwlabel:
                        text: 'Validate SSL:'
                        halign: 'left'
                        valign: 'center'
                        text_size: self.size
                        padding: [10, 0, 0, 0]
                        size_hint_x: None
                        width: 115

                    ToggleButton:
                        id: iserver_verify_0
                        text_size: self.size
                        font_size: 20
                        size_hint_x: None
                        size_hint_y: None
                        height: 30
                        width: 75
                        text: 'Yes'
                        group: 'vssl'
                        # state: 'down'
                        halign: 'center'
                        valign: 'center'
                        on_press: root.update_ssl_option(0, 4, True)

                    ToggleButton:
                        id: iserver_verify_1
                        text_size: self.size
                        font_size: 20
                        size_hint_x: None
                        size_hint_y: None
                        height: 30
                        width: 75
                        text: 'No'
                        group: 'vssl'
                        # state: 'down'
                        halign: 'center'
                        valign: 'center'
                        on_press: root.update_ssl_option(0, 4, False)

                BoxLayout:
                    size_hint_y: None
                    height: 35
                    orientation: 'horizontal'

                    ToggleButton:
                        id: iserver_active_0
                        text_size: self.size
                        font_size: 20
                        size_hint_x: None
                        size_hint_y: None
                        height: 30
                        width: 150
                        text: 'Active'
                        group: 'con'
                        # state: 'down'
                        halign: 'center'
                        valign: 'center'
                        on_press: root.update_active(0)

                BoxLayout:
                    size_hint_y: None
                    height: 35
                    orientation: 'horizontal'

                    Nwlabel:
                        text: 'Alt Server:'
                        halign: 'left'
                        valign: 'center'
                        text_size: self.size
                        padding: [10, 0, 0, 0]
                        size_hint_x: None
                        width: 115

                    TextInput:
                        id: iserver_althost
                        halign: 'left'
                        text: 'kva.keva.one'
                        text_size: self.size
                        size_hint_x: None
                        size_hint_y: None
                        height: 30
                        width: 250
                        on_text: root.update_althost()

                BoxLayout:
                    size_hint_y: None
                    height: 35
                    orientation: 'horizontal'

                    Nwlabel:
                        text: 'Alt Port:'
                        halign: 'left'
                        valign: 'center'
                        text_size: self.size
                        padding: [10, 0, 0, 0]
                        size_hint_x: None
                        width: 115

                    TextInput:
                        id: iserver_altport
                        halign: 'left'
