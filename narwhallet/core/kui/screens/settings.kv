                        text_size: self.size
                        size_hint_x: None
                        size_hint_y: None
                        height: 30
                        width: 250
                        on_text: root.update_altport()

                BoxLayout:
                    size_hint_y: None
                    height: 35
                    orientation: 'horizontal'

                    Nwlabel:
                        text: 'SSL:'
                        halign: 'left'
                        valign: 'center'
                        text_size: self.size
                        padding: [10, 0, 0, 0]
                        size_hint_x: None
                        width: 115

                    ToggleButton:
                        id: iserver_altssl_0
                        text_size: self.size
                        font_size: 20
                        size_hint_x: None
                        size_hint_y: None
                        height: 30
                        width: 75
                        text: 'Yes'
                        group: 'assl'
                        # state: 'down'
                        halign: 'center'
                        valign: 'center'
                        on_press: root.update_ssl_option(1, 3, True)

                    ToggleButton:
                        id: iserver_altssl_1
                        text_size: self.size
                        font_size: 20
                        size_hint_x: None
                        size_hint_y: None
                        height: 30
                        width: 75
                        text: 'No'
                        group: 'assl'
                        # state: 'down'
                        halign: 'center'
                        valign: 'center'
                        on_press: root.update_ssl_option(1, 3, False)

                BoxLayout:
                    size_hint_y: None
                    height: 35
                    orientation: 'horizontal'

                    Nwlabel:
                        text: 'Validate SSL:'
                        halign: 'left'
                        valign: 'center'
                        text_size: self.size
                        padding: [10, 0, 0, 0]
                        size_hint_x: None
                        width: 115

                    ToggleButton:
                        id: iserver_altverify_0
                        text_size: self.size
                        font_size: 20
                        size_hint_x: None
                        size_hint_y: None
                        height: 30
                        width: 75
                        text: 'Yes'
                        group: 'avssl'
                        # state: 'down'
                        halign: 'center'
                        valign: 'center'
                        on_press: root.update_ssl_option(1, 4, True)

                    ToggleButton:
                        id: iserver_altverify_1
                        text_size: self.size
                        font_size: 20
                        size_hint_x: None
                        size_hint_y: None
                        height: 30
                        width: 75
                        text: 'No'
                        group: 'avssl'
                        # state: 'down'
                        halign: 'center'
                        valign: 'center'
                        on_press: root.update_ssl_option(1, 4, False)

                BoxLayout:
                    size_hint_y: None
                    height: 35
                    orientation: 'horizontal'

                    ToggleButton:
                        id: iserver_active_1
                        text_size: self.size
                        font_size: 20
                        size_hint_x: None
                        size_hint_y: None
                        height: 30
                        width: 150
                        text: 'Active'
                        group: 'con'
                        # state: 'down'
                        halign: 'center'
                        valign: 'center'
                        on_press: root.update_active(1)

                BoxLayout:
                    size_hint_y: None
                    height: 35
                    orientation: 'horizontal'

                    Nwlabel:
                        text: 'IPFS Settings'
                        halign: 'left'
                        font_size: 25
                        text_size: self.size
                        padding: [10, 0, 0, 0]

                BoxLayout:
                    size_hint_y: None
                    height: 35
                    orientation: 'horizontal'

                    Nwlabel:
                        text: 'Gateway:'
                        halign: 'left'
                        valign: 'center'
