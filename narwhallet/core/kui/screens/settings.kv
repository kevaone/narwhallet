                        width: 115

                    TextInput:
                        text: 'ipfs.keva.one'
                        halign: 'left'
                        text_size: self.size
                        size_hint_x: None
                        size_hint_y: None
                        height: 30
                        width: 250
                        on_text: root.update_altipfs()

                BoxLayout:
                    size_hint_y: None
                    height: 35
                    orientation: 'horizontal'

                    ToggleButton:
                        id: iserver_ipfs_1
