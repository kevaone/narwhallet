                        text_size: self.size
                        font_size: dp(20)
                        size_hint_x: None
                        size_hint_y: None
                        height: dp(40)
                        width: dp(75)
                        text: 'Yes'
                        group: 'avssl'
                        # state: 'down'
                        halign: 'center'
                        valign: 'center'
                        on_press: root.update_ssl_option(1, 4, True)

                    ToggleButton:
                        id: iserver_altverify_1
                        text_size: self.size
                        font_size: dp(20)
                        size_hint_x: None
                        size_hint_y: None
                        height: dp(40)
                        width: dp(75)
                        text: 'No'
                        group: 'avssl'
                        # state: 'down'
                        halign: 'center'
                        valign: 'center'
                        on_press: root.update_ssl_option(1, 4, False)

