                        size_hint_x: None
                        size_hint_y: None
                        height: dp(30)
                        width: dp(250)
                        on_text: root.update_althost()

                Nwboxlayout:
                    size_hint_y: None
                    height: dp(35)
                    orientation: 'horizontal'

