                        text: 'Active'
                        group: 'con'
                        # state: 'down'
                        halign: 'center'
                        valign: 'center'
                        on_press: root.update_active(1)

                Nwboxlayout:
                    size_hint_y: None
                    height: dp(35)
                    orientation: 'horizontal'

                    Nwlabel:
                        text: 'IPFS Settings'
                        halign: 'left'
                        font_size: dp(25)
                        text_size: self.size
                        padding: [10, 0, 0, 0]

                Nwboxlayout:
                    size_hint_y: None
                    height: dp(35)
                    orientation: 'horizontal'

                    Nwlabel:
                        text: 'Gateway:'
                        halign: 'left'
                        valign: 'center'
                        text_size: self.size
                        padding: [10, 0, 0, 0]
