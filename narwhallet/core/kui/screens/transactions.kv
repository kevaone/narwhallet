<TransactionsScreen>
    transaction_list: transaction_list
    header: header

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                text: 'Transactions'
                halign: 'left'
                font_size: dp(25)
                text_size: self.size
                padding: [10, 0, 0, 0]

        RecycleView:
            id: transaction_list
            viewclass: 'TransactionListInfo'
            do_scroll_x: False
            do_scroll_y: True
            bar_width: dp(15)
            scroll_type: ['bars','content']

            RecycleGridLayout:
                canvas:
                    Color:
                        rgba: 60/255, 61/255, 61/255, 1

                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: None
                rows: 0
                cols: 1
                height: self.minimum_height #85 * self.rows + (10*self.rows) if root.width <= 650 else 65 * self.rows + (10*self.rows)
                row_default_height: dp(85) if root.width <= dp(650) else dp(60)
                default_size: None, dp(85) if root.width <= dp(650) else dp(60)
                default_size_hint: 1, None
                spacing: dp(5)
                padding: dp(5)

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)

            # Nwbutton:
            #     text: 'Home'
            #     on_press: root.manager.current = 'home_screen'

            Nwbutton:
                text: 'Wallet'
                on_press: root.manager.current = 'wallet_screen'
