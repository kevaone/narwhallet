<TransactionsScreen>
    transaction_list: transaction_list
    header: header

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                _text: 'History'
                halign: 'left'
                font_size: dp(25)
                text_size: self.size
                padding: [10, 0, 0, 0]

        Nwgrid:
            id: transaction_list
            viewclass: 'TransactionListInfo'

        Nwboxlayout:
            size_hint_y: None
            height: dp(60)

            # Nwbutton:
            #     _text: 'Home'
            #     on_press: root.manager.current = 'home_screen'

            Nwbutton:
                _text: 'Wallet'
                on_press: root.manager.current = 'wallet_screen'
