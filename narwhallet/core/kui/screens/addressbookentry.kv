<AddressBookEntryScreen>
    address: address
    address_name: address_name
    balance: balance
    coin: coin
    label: label
    qr_code: qr_code
    sent: sent
    received: received
    header: header

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header
            value: 'Address Book - Entry'

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        Nwboxlayout:
            size_hint_y: None
            height: dp(25)
            orientation: 'horizontal'

            Nwlabel:
                id: address
                _text: ''
                font_size: dp(18)
                padding: [10, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: dp(25)
            orientation: 'horizontal'

            Nwlabel:
                _text: 'Coin:'
                font_size: dp(18)
                padding: [10, 0, 0, 0]

            Nwlabel:
                id: coin
                _text: ''
                font_size: dp(18)
                padding: [10, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: dp(25)
            orientation: 'horizontal'

            Nwlabel:
                _text: 'Name:'
                font_size: dp(18)
                padding: [10, 0, 0, 0]

            Nwlabel:
                id: address_name
                _text: ''
                font_size: dp(18)
                padding: [10, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: dp(25)
            orientation: 'horizontal'

            Nwlabel:
                _text: 'Label:'
                font_size: dp(18)
                padding: [10, 0, 0, 0]

            Nwlabel:
                id: label
                _text: ''
                font_size: dp(18)
                padding: [10, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        Nwboxlayout:
            orientation: 'horizontal'

            QR_Code:
                id: qr_code

        Nwboxlayout:
            size_hint_y: None
            height: dp(20)
            orientation: 'horizontal'

            Nwlabel:
                _text: 'Balance:'
                font_size: dp(15)
                size_hint_x: None
                padding: [10, 0, 0, 0]
                width: dp(120)

            Nwlabel:
                id: balance
                _text: '0'
                font_size: dp(15)

        Nwboxlayout:
            size_hint_y: None
            height: dp(20)
            orientation: 'horizontal'

            Nwlabel:
                _text: 'Sent:'
                font_size: dp(15)
                size_hint_x: None
                padding: [10, 0, 0, 0]
                width: dp(120)

            Nwlabel:
                id: sent
                _text: '0.0'
                font_size: dp(15)

        Nwboxlayout:
            size_hint_y: None
            height: dp(20)
            orientation: 'horizontal'

            Nwlabel:
                _text: 'Received:'
                font_size: dp(15)
                size_hint_x: None
                padding: [10, 0, 0, 0]
                width: dp(120)

            Nwlabel:
                id: received
                _text: '0.0'
                font_size: dp(15)

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(60)

            Nwbutton:
                _text: 'Address Book'
                on_press: root.manager.current = 'addressbook_screen'
