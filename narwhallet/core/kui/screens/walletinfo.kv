                        source: 'narwhallet/core/kui/assets/clipboard_white.png'
                        height: dp(25)
                        width: dp(25)
                        on_touch_down: if self.collide_point(*args[1].pos): root.manager.copy_to_clipboard(root.ypub.text)

                    Nwlabel:
                        halign: 'left'
                        valign: 'center'
                        _text: 'ypub:'
                        text_size: self.size
                        padding: [5, 0, 0, 0]

                Nwboxlayout:
                    size_hint_y: None
                    height: dp(80)

                    Nwlabel:
                        _text: ''
                        size_hint_x: None
                        width: dp(15)

                    Nwlabel:
                        id: ypub
                        halign: 'left'
                        valign: 'top'
                        _text: ''
                        text_size: self.size

