<NamespaceScreen>
    namespace_key_list: namespace_key_list
    transfer_button: transfer_button
    auction_button: auction_button
    name_update_button: name_update_button
    header: header
    btn_create: btn_create
    info_button: info_button

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)

            Nwbutton:
                id: favorite
                _text: ' '
                size_hint_x: None
                width: dp(50)
                icon: root.favorite_source
                icon_size: (dp(25), dp(25))
                icon_padding: dp(0)
                on_press: root.set_favorite()

            Nwbutton:
                id: transfer_button
                _text: 'Transfer'
                icon: 'narwhallet/core/kui/assets/money-bill-transfer.png'
                icon_size: (dp(25), dp(25))
                icon_padding: dp(25)
                on_press: root.transfer_namespace()

            Nwbutton:
                id: auction_button
                _text: 'Auction'
                icon: 'narwhallet/core/kui/assets/gavel.png'
                icon_size: (dp(25), dp(25))
                icon_padding: dp(25)
                on_press: root.auction_namespace()

            Nwbutton:
                id: name_update_button
                _text: ' '
                size_hint_x: None
                width: dp(50)
                icon: 'narwhallet/core/kui/assets/wrench.png'
                icon_size: (dp(25), dp(25))
                icon_padding: dp(0)
                on_press: root.update_namespace_name()

            Nwbutton:
                id: info_button
                _text: ' '
                size_hint_x: None
                width: dp(50)
                icon: 'narwhallet/core/kui/assets/circle-info.png'
                icon_size: (dp(25), dp(25))
                icon_padding: dp(0)
                on_press: root.info_popup()

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)

            Nwbutton:
                id: btn_create
                _text: 'Create Key'
                icon: 'narwhallet/core/kui/assets/create.png'
                icon_size: (dp(23), dp(20))
                icon_padding: dp(29)
                on_press: root.manager.createnamespacekey_screen.populate()

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        ScrollView:
            do_scroll_y: True
            bar_width: dp(15)
            size_hint: 1, 1
            scroll_type: ['bars','content']

            BoxLayout:
                id: namespace_key_list
                orientation: 'vertical'
                canvas:
                    Color:
                        rgba: 60/255, 61/255, 61/255, 1

                    Rectangle:
                        pos: self.pos
                        size: self.size

                size_hint: 1, None
                height: self.minimum_height
                spacing: dp(5)
                padding: dp(5)

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(60)

            Nwbutton:
                _text: 'Wallet'
                icon: 'narwhallet/core/kui/assets/wallet.png'
                icon_size: (dp(20), dp(20))
                icon_padding: dp(22)
                on_press: root.manager.current = 'wallet_screen'

            Nwbutton:
                _text: 'Namespaces'
                icon: 'narwhallet/core/kui/assets/database.png'
                icon_size: (dp(20), dp(20))
                icon_padding: dp(33)
                on_press: root.manager.current = 'namespaces_screen'
