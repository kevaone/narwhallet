<NamespaceScreen>
    namespaceid: namespaceid
    namespace_name: namespace_name
    shortcode: shortcode
    namespace_key_list: namespace_key_list
    owner: owner
    creator: creator
    transfer_button: transfer_button
    auction_button: auction_button
    header: header
    btn_create: btn_create

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                text: ''
                size_hint_x: None
                width: dp(5)

            Nwimage:
                source: 'narwhallet/core/kui/assets/clipboard_white.png'
                height: dp(25)
                width: dp(25)
                on_touch_down: if self.collide_point(*args[1].pos): root.manager.copy_to_clipboard(root.namespaceid.text)

            Nwlabel:
                id: namespaceid
                valign: 'center'
                text: 'Namwspace Example'
                font_size: dp(16)
                text_size: self.size
                padding: [10, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: dp(30)
            orientation: 'horizontal'

            Nwlabel:
                text: ''
                size_hint_x: None
                width: dp(5)

            Nwimage:
                source: 'narwhallet/core/kui/assets/clipboard_white.png'
                height: dp(25)
                width: dp(25)
                on_touch_down: if self.collide_point(*args[1].pos): root.manager.copy_to_clipboard(root.shortcode.text)

            Nwlabel:
                id: shortcode
                valign: 'center'
                font_size: dp(20)
                text_size: self.size
                text: 'Shortcode'
                size_hint_x: None
                padding: [10, 0, 0, 0]
                width: dp(150)

            Nwimage:
                id: transfer_button
                source: 'narwhallet/core/kui/assets/transfer_white.png'
                on_touch_down: if self.collide_point(*args[1].pos): root.transfer_namespace()

            Nwimage:
                id: auction_button
                source: 'narwhallet/core/kui/assets/medal2.png'
                on_touch_down: if self.collide_point(*args[1].pos): root.auction_namespace()

        Nwboxlayout:
            size_hint_y: None
            height: dp(30)
            orientation: 'horizontal'

            Nwimage:
                source: 'narwhallet/core/kui/assets/wrench_white.png'
                height: dp(25)
                width: dp(25)
                on_touch_down: if self.collide_point(*args[1].pos): root.update_namespace_name()

            Nwlabel:
                id: namespace_name
                font_size: dp(25)
                text_size: self.size
                text: 'Name'
                padding: [10, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: dp(25)
            orientation: 'horizontal'

            Nwlabel:
                text: ''
                size_hint_x: None
                width: dp(5)

            Nwimage:
                source: 'narwhallet/core/kui/assets/clipboard_white.png'
                height: dp(20)
                width: dp(20)
                on_touch_down: if self.collide_point(*args[1].pos): root.manager.copy_to_clipboard(root.creator.text)

            Nwlabel:
                text: 'Creator:'
                valign: 'center'
                padding: [5, 0, 0, 0]
                size_hint_x: None
                width: dp(75)

            Nwlabel:
                id: creator
                valign: 'center'
                text: ''

        Nwboxlayout:
            size_hint_y: None
            height: dp(25)
            orientation: 'horizontal'

            Nwlabel:
                text: ''
                size_hint_x: None
                width: dp(5)

            Nwimage:
                source: 'narwhallet/core/kui/assets/clipboard_white.png'
                height: dp(20)
                width: dp(20)
                on_touch_down: if self.collide_point(*args[1].pos): root.manager.copy_to_clipboard(root.owner.text)

            Nwlabel:
                text: 'Owner:'
                valign: 'center'
                padding: [5, 0, 0, 0]
                size_hint_x: None
                width: dp(75)

            Nwlabel:
                id: owner
                valign: 'center'
                text: ''

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)

            Nwbutton:
                id: btn_create
                text: 'Create Key'
                on_press: root.manager.createnamespacekey_screen.populate()

        ScrollView:
            do_scroll_y: True
            bar_width: dp(15)
            size_hint: 1, 1
            scroll_type: ['bars','content']

            BoxLayout:
                id: namespace_key_list
                orientation: 'vertical'
                canvas:
                    Color:
                        rgba: 60/255, 61/255, 61/255, 1

                    Rectangle:
                        pos: self.pos
                        size: self.size

                size_hint: 1, None
                height: self.minimum_height
                spacing: dp(5)
                padding: dp(5)

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(60)

            # Nwbutton:
            #     text: 'Wallet'
            #     on_press: root.manager.current = 'wallet_screen'

            Nwbutton:
                text: 'Namespaces'
                on_press: root.manager.current = 'namespaces_screen'
