<NamespaceScreen>
    namespaceid: namespaceid
    namespace_name: namespace_name
    shortcode: shortcode
    namespace_key_list: namespace_key_list
    owner: owner
    creator: creator
    transfer_button: transfer_button
    header: header

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        BoxLayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                id: namespaceid
                text: 'Namwspace Example'
                padding_x: 10

        BoxLayout:
            size_hint_y: None
            height: 30
            orientation: 'horizontal'

            Nwlabel:
                id: shortcode
                font_size: 25
                text_size: self.size
                text: 'Shortcode'
                padding_x: 10

            Image:
                id: transfer_button
                source: 'narwhallet/core/kui/assets/star.png'
                allow_stretch: True
                fit_mode: 'contain'
                size_hint_y: None
                height: 30
                size_hint_x: None
                width: 30
                on_touch_down: if self.collide_point(*args[1].pos): root.transfer_namespace()

        BoxLayout:
            size_hint_y: None
            height: 30
            orientation: 'horizontal'

            Nwlabel:
                id: namespace_name
                font_size: 25
                text_size: self.size
                text: 'Name'
                padding_x: 10

        BoxLayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                text: 'Creator:'
                padding_x: 10

            Nwlabel:
                id: creator
                text: ''

        BoxLayout:
            size_hint_y: None
            height: 20
            orientation: 'horizontal'

            Nwlabel:
                text: 'Owner:'
                padding_x: 10

            Nwlabel:
                id: owner
                text: 'Owner:'

        BoxLayout:
            size_hint_y: None
            height: 10
            orientation: 'horizontal'

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: 35

            Nwbutton:
                text: 'Create Key'
                on_press: root.manager.createnamespacekey_screen.populate()

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            bar_width: 6

            GridLayout:
                id: namespace_key_list
                canvas:
                    Color:
                        rgba: 60/255, 61/255, 61/255, 1

                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_y: None
                rows: 0
                # TODO: Fixme
                height: 85 * self.rows + (10*self.rows) if root.width <= dp(650) else 65 * self.rows + (10*self.rows)
                # row_default_height: dp(85) if root.width <= dp(650) else dp(65)
                cols: 1
                spacing: 5
                padding: 5

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: 35

            Nwbutton:
                text: 'Wallet'
                on_press: root.manager.current = 'wallet_screen'

            Nwbutton:
                text: 'Namespaces'
                on_press: root.manager.current = 'namespaces_screen'
