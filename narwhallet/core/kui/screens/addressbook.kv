<AddressBookScreen>
    address_list: address_list
    nav0: nav0
    header: header

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header
            value: 'Address Book'

        Nwboxlayout:
            size_hint_y: None
            height: 35

            Nwbutton:
                text: 'Add'
                on_press: root.add_address()

        RecycleView:
            id: address_list
            viewclass: 'AddressBookListInfo'
            do_scroll_y: True
            bar_width: 15
            scroll_type: ['bars','content']

            RecycleGridLayout:
                size_hint_y: None
                height: self.minimum_height
                default_size: None, 120
                default_size_hint: 1, None
                cols: 1
                spacing: 5
                padding: 5

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: 35

            Nwbutton:
                id: nav0
                # icon: 'narwhallet/core/kui/assets/home_white.png'
                icon_size: (25, 25)
                icon_padding: 20
                text: 'Home'
