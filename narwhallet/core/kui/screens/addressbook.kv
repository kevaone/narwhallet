<AddressBookScreen>
    address_list: address_list
    nav0: nav0
    header: header

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header
            value: 'Address Book'

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        Nwboxlayout:
            size_hint_y: None
            height: dp(50)

            Nwbutton:
                _text: 'Add'
                on_press: root.add_address()

        Nwgrid:
            id: address_list
            viewclass: 'AddressBookListInfo'

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(60)

            Nwbutton:
                id: nav0
                # icon: 'narwhallet/core/kui/assets/home_white.png'
                icon_size: (dp(25), dp(25))
                icon_padding: dp(20)
                _text: 'Home'
