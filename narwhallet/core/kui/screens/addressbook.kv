<AddressBookScreen>
    address_list: address_list
    nav0: nav0

    GridLayout:
        size: root.width, root.height
        cols: 1

        Nwlabel:
            text: 'Narwhallet'
            halign: 'left'
            valign: 'center'
            font_size: 37
            text_size: self.size
            size_hint_y: None
            height: 47
            padding_x: 5

        BoxLayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'
            Nwlabel:
                text: 'Address Book'
                halign: 'left'
                font_size: 25
                text_size: self.size
                padding_x: 10

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            bar_width: 6

            GridLayout:
                id: address_list
                size_hint_y: None
                height: self.minimum_height * 17
                cols: 1
                spacing: 5
                padding: 5

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: 35

            Nwbutton:
                id: nav0
                text: 'Home'
