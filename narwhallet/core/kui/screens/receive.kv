<ReceiveScreen>
    address: address
    # amount: amount
    label: label
    qr_code: qr_code
    header: header

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        Nwboxlayout:
            size_hint_y: None
            height: dp(40)
            orientation: 'horizontal'

            Nwlabel:
                id: address
                valign: 'center'
                _text: ''
                font_size: dp(18)
                padding: [10, 0, 0, 0]

        Nwboxlayout:
            size_hint_y: None
            height: dp(35)
            orientation: 'horizontal'

            Nwlabel:
                _text: 'Label:'
                valign: 'center'
                font_size: dp(18)
                size_hint_x: None
                padding: [10, 0, 0, 0]
                width: 75

            TextInput:
                id: label
                valign: 'center'
                font_size: dp(18)
                size_hint_x: None
                padding: [10, 0, 0, 0]
                width: dp(300)

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        # BoxLayout:
        #     size_hint_y: None
        #     height: 35
        #     orientation: 'horizontal'

        #     Nwlabel:
        #         _text: 'Amount:'
        #         font_size: 18
        #         size_hint_x: None
        #         padding: [10, 0, 0, 0]
        #         width: 120

        #     TextInput:
        #         id: amount
        #         _text: '0.0'
        #         font_size: 18
        #         size_hint_x: None
        #         padding: [10, 0, 0, 0]
        #         width: 250

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        Nwboxlayout:
            # size_hint_y: None
            # height: 65
            orientation: 'horizontal'

            QR_Code:
                id: qr_code

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(60)

            Nwbutton:
                _text: 'Done'
                on_press: root.save()

            # Nwbutton:
            #     _text: 'Addresses'
