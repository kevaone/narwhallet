<ReceiveScreen>
    address: address
    amount: amount
    label: label
    qr_code: qr_code
    header: header

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        BoxLayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                id: address
                text: ''
                font_size: dp(18)
                padding_x: 10

        BoxLayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                text: 'Label:'
                font_size: dp(18)
                size_hint_x: None
                padding_x: 10
                width: dp(120)

            TextInput:
                id: label
                font_size: dp(18)
                size_hint_x: None
                padding_x: 10
                width: dp(250)

        BoxLayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        BoxLayout:
            size_hint_y: None
            height: 35
            orientation: 'horizontal'

            Nwlabel:
                text: 'Amount:'
                font_size: dp(18)
                size_hint_x: None
                padding_x: 10
                width: dp(120)

            TextInput:
                id: amount
                text: '0.0'
                font_size: dp(18)
                size_hint_x: None
                padding_x: 10
                width: dp(250)

        BoxLayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        BoxLayout:
            # size_hint_y: None
            # height: 65
            orientation: 'horizontal'

            QR_Code:
                id: qr_code

        BoxLayout:
            size_hint_y: None
            height: dp(10)
            orientation: 'horizontal'

        BoxLayout:
            canvas:
                Color:
                    rgba: 60/255, 61/255, 61/255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'horizontal'
            size_hint_y: None
            height: 35

            Nwbutton:
                text: 'Done'
                on_press: root.manager.current = 'wallet_screen'

            # Nwbutton:
            #     text: 'Addresses'
            #     on_press: root.manager.current = 'addresses_screen'
