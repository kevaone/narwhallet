<AboutScreen>
    header: header

    GridLayout:
        size: root.width, root.height
        cols: 1

        Header:
            id: header

        Nwboxlayout:
            size_hint_y: None
            height: dp(10)

        BoxLayout:
            size_hint_y: None
            height: dp(60)
            orientation: 'horizontal'

            Nwlabel:
                _text: ''

            Nwlabel:
                _text: ''

        Nwboxlayout:
            size_hint_y: None
            height: dp(60)

            Nwbutton:
                _text: 'Home'
                icon: 'narwhallet/core/kui/assets/home_white.png'
                icon_size: (dp(20), dp(20))
                icon_padding: dp(20)
                on_press: root.manager.current = 'home_screen'
